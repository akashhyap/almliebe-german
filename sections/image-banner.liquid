<div class="image-banner-wrapper{% if section.settings.banner_width == 'container' %} image-banner-wrapper--container{% endif %}">
  {%- liquid
    if section.settings.image != blank
      assign img_aspect = section.settings.image.aspect_ratio | default: 2.5
    else
      assign img_aspect = 2.5
    endif
  -%}
  <div class="image-banner image-banner--{{ section.settings.banner_height }} image-banner--{{ section.settings.text_alignment }}" style="--text-color: {{ section.settings.text_color }}; --img-aspect: {{ img_aspect }};">
    {% if section.settings.image != blank %}
      <div class="image-banner__media">
        {%- if section.settings.image_mobile != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 1920 }}"
            alt="{{ section.settings.image.alt | escape }}"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            loading="eager"
            class="image-banner__img hidden-mobile"
          >
          <img
            src="{{ section.settings.image_mobile | image_url: width: 800 }}"
            alt="{{ section.settings.image_mobile.alt | escape }}"
            width="{{ section.settings.image_mobile.width }}"
            height="{{ section.settings.image_mobile.height }}"
            loading="eager"
            class="image-banner__img hidden-desktop"
          >
        {%- else -%}
          <img
            src="{{ section.settings.image | image_url: width: 1920 }}"
            alt="{{ section.settings.image.alt | escape }}"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            loading="eager"
            class="image-banner__img"
          >
        {%- endif -%}
        <div class="image-banner__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
      </div>
    {% endif %}

    <div class="image-banner__wrapper">
      <div class="image-banner__content">
        {% if section.settings.heading != blank %}
          <h1 class="image-banner__heading">{{ section.settings.heading }}</h1>
        {% endif %}
        {% if section.settings.text != blank %}
          <p class="image-banner__text">{{ section.settings.text }}</p>
        {% endif %}
        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="btn btn--{{ section.settings.button_style }} btn--large">
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  /* ===========================================
     WRAPPER - Full Width vs Container
     =========================================== */
  .image-banner-wrapper {
    width: 100%;
  }

  .image-banner-wrapper--container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 768px) {
    .image-banner-wrapper--container {
      padding: 0 2rem;
    }
  }

  .image-banner-wrapper--container .image-banner {
    border-radius: 8px;
    overflow: hidden;
  }

  /* ===========================================
     BASE BANNER - Fixed aspect ratios (default)
     =========================================== */
  .image-banner {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    width: 100%;
  }

  /* Default media - absolute positioned, covers container */
  .image-banner__media {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  /* Default image - covers and crops */
  .image-banner__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .image-banner__overlay {
    position: absolute;
    inset: 0;
    background: #000000;
    z-index: 1;
  }

  /* Default wrapper - centered on top of image */
  .image-banner__wrapper {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: var(--page-width, 1400px);
    margin: 0 auto;
    padding: 0 2rem;
  }

  @media (max-width: 767px) {
    .image-banner__wrapper {
      padding: 0 1rem;
    }
  }

  .image-banner__content {
    max-width: 800px;
  }

  /* ===========================================
     HEIGHT OPTIONS - Fixed aspect ratios
     =========================================== */
  .image-banner--small {
    aspect-ratio: 10 / 3;
  }

  .image-banner--medium {
    aspect-ratio: 8 / 3;
  }

  .image-banner--large {
    aspect-ratio: 6 / 3;
  }

  .image-banner--fullscreen {
    min-height: calc(100vh - var(--header-height, 80px) - var(--announcement-height, 40px));
  }

  @media (max-width: 767px) {
    .image-banner--small,
    .image-banner--medium {
      aspect-ratio: 16 / 9;
    }

    .image-banner--large {
      aspect-ratio: 4 / 3;
    }

    .image-banner--fullscreen {
      min-height: calc(100vh - var(--header-height-mobile, 60px) - var(--announcement-height, 40px));
    }
  }

  /* ===========================================
     AUTO MODE - Uses actual image aspect ratio
     Capped at 80vh max height (accounts for fixed header)
     =========================================== */
  .image-banner.image-banner--auto {
    /* Use actual image aspect ratio from Liquid */
    aspect-ratio: var(--img-aspect, 2.5);
    max-height: 80vh;
  }

  @media (max-width: 767px) {
    .image-banner.image-banner--auto {
      max-height: 65vh;
    }
  }

  /* ===========================================
     TEXT ALIGNMENT
     =========================================== */
  .image-banner--left .image-banner__content {
    margin-left: 0;
    margin-right: auto;
    text-align: left;
  }

  .image-banner--center .image-banner__content {
    margin-left: auto;
    margin-right: auto;
    text-align: center;
  }

  .image-banner--right .image-banner__content {
    margin-left: auto;
    margin-right: 0;
    text-align: right;
  }

  /* ===========================================
     TYPOGRAPHY
     =========================================== */
  .image-banner__heading {
    font-family: 'Poppins', sans-serif;
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 1rem 0;
    color: var(--text-color);
    text-shadow: 0 2px 12px rgba(0,0,0,0.3);
  }

  .image-banner__text {
    font-family: 'Poppins', sans-serif;
    font-size: clamp(1rem, 2vw, 1.25rem);
    font-weight: 400;
    line-height: 1.6;
    margin: 0 0 2rem 0;
    color: var(--text-color);
    text-shadow: 0 2px 12px rgba(0,0,0,0.3);
  }

  /* ===========================================
     BUTTONS
     =========================================== */
  .image-banner .btn {
    display: inline-block;
    padding: 1rem 2.5rem;
    font-family: 'Poppins', sans-serif;
    font-size: 0.9375rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    text-decoration: none;
    border-radius: 2px;
    transition: all 0.2s ease;
    cursor: pointer;
    border: 2px solid transparent;
  }

  .image-banner .btn--large {
    padding: 1.25rem 3rem;
    font-size: 1rem;
  }

  .image-banner .btn--primary {
    background: #000000;
    color: #FFFFFF;
    border-color: #000000;
  }

  .image-banner .btn--primary:hover {
    background: #333333;
    border-color: #333333;
  }

  .image-banner .btn--secondary {
    background: transparent;
    color: var(--text-color);
    border-color: var(--text-color);
  }

  .image-banner .btn--secondary:hover {
    background: var(--text-color);
    color: #000000;
  }

  /* ===========================================
     RESPONSIVE VISIBILITY
     =========================================== */
  .hidden-mobile {
    display: block;
  }
  .hidden-desktop {
    display: none;
  }

  @media (max-width: 767px) {
    .hidden-mobile {
      display: none;
    }
    .hidden-desktop {
      display: block;
    }
  }
</style>

