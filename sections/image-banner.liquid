<div class="image-banner-wrapper{% if section.settings.banner_width == 'container' %} image-banner-wrapper--container{% endif %}">
  <div class="image-banner image-banner--{{ section.settings.banner_height }} image-banner--{{ section.settings.text_alignment }}" style="--text-color: {{ section.settings.text_color }};">
    {% if section.settings.image != blank %}
      <div class="image-banner__media">
        {%- if section.settings.image_mobile != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 1600 }}"
            alt="{{ section.settings.image.alt | escape }}"
            width="1600"
            height="auto"
            loading="eager"
            class="image-banner__img hidden-mobile"
          >
          <img
            src="{{ section.settings.image_mobile | image_url: width: 800 }}"
            alt="{{ section.settings.image_mobile.alt | escape }}"
            width="800"
            height="auto"
            loading="eager"
            class="image-banner__img hidden-desktop"
          >
        {%- else -%}
          <img
            src="{{ section.settings.image | image_url: width: 1600 }}"
            alt="{{ section.settings.image.alt | escape }}"
            width="1600"
            height="auto"
            loading="eager"
            class="image-banner__img"
          >
        {%- endif -%}
        <div class="image-banner__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
      </div>
    {% endif %}

    <div class="image-banner__wrapper">
      <div class="image-banner__content">
        {% if section.settings.heading != blank %}
          <h1 class="image-banner__heading">{{ section.settings.heading }}</h1>
        {% endif %}
        {% if section.settings.text != blank %}
          <p class="image-banner__text">{{ section.settings.text }}</p>
        {% endif %}
        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="btn btn--{{ section.settings.button_style }} btn--large">
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  /* Wrapper - controls full width vs container */
  .image-banner-wrapper {
    width: 100%;
  }

  .image-banner-wrapper--container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 768px) {
    .image-banner-wrapper--container {
      padding: 0 2rem;
    }
  }

  /* Container mode - add border radius */
  .image-banner-wrapper--container .image-banner {
    border-radius: 8px;
    overflow: hidden;
  }

  .image-banner {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    aspect-ratio: 8 / 3;
    width: 100%;
  }

  /* Height Options */
  .image-banner--auto {
    aspect-ratio: auto;
  }

  .image-banner--small {
    aspect-ratio: 10 / 3;
  }

  .image-banner--medium {
    aspect-ratio: 8 / 3;
  }

  .image-banner--large {
    aspect-ratio: 6 / 3;
  }

  .image-banner--fullscreen {
    aspect-ratio: auto;
    min-height: calc(100vh - var(--header-height) - var(--announcement-height));
  }

  @media (max-width: 767px) {
    .image-banner {
      aspect-ratio: 16 / 9;
    }

    .image-banner--auto {
      aspect-ratio: auto;
    }

    .image-banner--small {
      aspect-ratio: 16 / 9;
    }
    
    .image-banner--medium {
      aspect-ratio: 16 / 9;
    }

    .image-banner--large {
      aspect-ratio: 4 / 3;
    }

    .image-banner--fullscreen {
      aspect-ratio: auto;
      min-height: calc(100vh - var(--header-height-mobile) - var(--announcement-height));
    }
  }

  .image-banner__media {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  /* Auto mode - image is static, not absolute */
  .image-banner--auto .image-banner__media {
    position: relative;
  }

  .image-banner--auto .image-banner__wrapper {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .image-banner__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Auto mode - show full image without cropping */
  .image-banner--auto .image-banner__img {
    height: auto;
    object-fit: contain;
  }

  .image-banner__overlay {
    position: absolute;
    inset: 0;
    background: #000000;
    z-index: 1;
  }

  .image-banner__wrapper {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 2rem;
  }

  @media (max-width: 767px) {
    .image-banner__wrapper {
      padding: 0 1rem;
    }
  }

  .image-banner__content {
    max-width: 800px;
  }

  /* Text Alignment */
  .image-banner--left .image-banner__content {
    margin-left: 0;
    margin-right: auto;
    text-align: left;
  }

  .image-banner--center .image-banner__content {
    margin-left: auto;
    margin-right: auto;
    text-align: center;
  }

  .image-banner--right .image-banner__content {
    margin-left: auto;
    margin-right: 0;
    text-align: right;
  }

  .image-banner__heading {
    font-family: 'Poppins', sans-serif;
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 1rem 0;
    color: var(--text-color);
    text-shadow: 0 2px 12px rgba(0,0,0,0.3);
  }

  .image-banner__text {
    font-family: 'Poppins', sans-serif;
    font-size: clamp(1rem, 2vw, 1.25rem);
    font-weight: 400;
    line-height: 1.6;
    margin: 0 0 2rem 0;
    color: var(--text-color);
    text-shadow: 0 2px 12px rgba(0,0,0,0.3);
  }

  /* Button Styles */
  .btn {
    display: inline-block;
    padding: 1rem 2.5rem;
    font-family: 'Poppins', sans-serif;
    font-size: 0.9375rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    text-decoration: none;
    border-radius: 2px;
    transition: all var(--duration-short);
    cursor: pointer;
    border: 2px solid transparent;
  }

  .btn--large {
    padding: 1.25rem 3rem;
    font-size: 1rem;
  }

  .btn--primary {
    background: #000000;
    color: #FFFFFF;
    border-color: #000000;
  }

  .btn--primary:hover {
    background: #333333;
    border-color: #333333;
  }

  .btn--secondary {
    background: transparent;
    color: var(--text-color);
    border-color: var(--text-color);
  }

  .btn--secondary:hover {
    background: var(--text-color);
    color: #000000;
  }
</style>

