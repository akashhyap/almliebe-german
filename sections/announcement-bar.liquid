{% if settings.show_announcement and settings.announcement_text != blank %}
  <div class="announcement-bar">
    {% if settings.announcement_link != blank %}
      <a href="{{ settings.announcement_link }}" class="announcement-bar__content">
        <span class="announcement-bar__text">{{ settings.announcement_text }}</span>
      </a>
    {% else %}
      <div class="announcement-bar__content">
        <span class="announcement-bar__text">{{ settings.announcement_text }}</span>
      </div>
    {% endif %}
  </div>

  <style>
    .announcement-bar {
      width: 100%;
      background: #111827;
      position: relative;
      z-index: 99;
    }

    .announcement-bar__content {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 40px;
      padding: 0.75rem 1rem;
      text-decoration: none;
      color: #ffffff;
    }

    .announcement-bar__text {
      font-family: 'Poppins', sans-serif;
      font-size: 0.8125rem;
      font-weight: 500;
      color: #000000;
      text-align: center;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      line-height: 1.4;
    }

    .announcement-bar__content:hover .announcement-bar__text {
      opacity: 0.8;
    }

    @media (max-width: 767px) {
      .announcement-bar__text {
        font-size: 0.75rem;
      }
    }
  </style>
{% endif %}
