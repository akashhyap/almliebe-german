<footer class="footer">
  <div class="container">
    <div class="footer__content">
      
      {%- comment -%} Footer Logo/Brand {%- endcomment -%}
      <div class="footer__section">
        <h3 class="footer__heading">{{ shop.name }}</h3>
        <p class="footer__text">{{ shop.description }}</p>
      </div>

      {%- comment -%} Quick Links {%- endcomment -%}
      <div class="footer__section">
        <h3 class="footer__heading">Shop</h3>
        <ul class="footer__menu">
          {% for link in linklists.footer.links %}
            <li class="footer__menu-item">
              <a href="{{ link.url }}" class="footer__link">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      {%- comment -%} Legal Links (German compliance) {%- endcomment -%}
      <div class="footer__section">
        <h3 class="footer__heading">Rechtliches</h3>
        <ul class="footer__menu">
          {% if settings.page_impressum != blank %}
            <li class="footer__menu-item">
              <a href="{{ pages[settings.page_impressum].url }}" class="footer__link">Impressum</a>
            </li>
          {% endif %}
          {% if settings.page_datenschutz != blank %}
            <li class="footer__menu-item">
              <a href="{{ pages[settings.page_datenschutz].url }}" class="footer__link">Datenschutz</a>
            </li>
          {% endif %}
          {% if settings.page_agb != blank %}
            <li class="footer__menu-item">
              <a href="{{ pages[settings.page_agb].url }}" class="footer__link">AGB</a>
            </li>
          {% endif %}
          {% if settings.page_widerruf != blank %}
            <li class="footer__menu-item">
              <a href="{{ pages[settings.page_widerruf].url }}" class="footer__link">Widerrufsrecht</a>
            </li>
          {% endif %}
        </ul>
      </div>

      {%- comment -%} Social Media {%- endcomment -%}
      <div class="footer__section">
        <h3 class="footer__heading">Folgen Sie uns</h3>
        <div class="footer__social">
          {% if settings.social_instagram != blank %}
            <a href="{{ settings.social_instagram }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Instagram">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2c2.717 0 3.056.01 4.122.06 1.065.05 1.79.217 2.428.465.66.254 1.216.598 1.772 1.153a4.908 4.908 0 0 1 1.153 1.772c.247.637.415 1.363.465 2.428.047 1.066.06 1.405.06 4.122 0 2.717-.01 3.056-.06 4.122-.05 1.065-.218 1.79-.465 2.428a4.883 4.883 0 0 1-1.153 1.772 4.915 4.915 0 0 1-1.772 1.153c-.637.247-1.363.415-2.428.465-1.066.047-1.405.06-4.122.06-2.717 0-3.056-.01-4.122-.06-1.065-.05-1.79-.218-2.428-.465a4.89 4.89 0 0 1-1.772-1.153 4.904 4.904 0 0 1-1.153-1.772c-.248-.637-.415-1.363-.465-2.428C2.013 15.056 2 14.717 2 12c0-2.717.01-3.056.06-4.122.05-1.066.217-1.79.465-2.428a4.88 4.88 0 0 1 1.153-1.772A4.897 4.897 0 0 1 5.45 2.525c.638-.248 1.362-.415 2.428-.465C8.944 2.013 9.283 2 12 2zm0 5a5 5 0 1 0 0 10 5 5 0 0 0 0-10zm6.5-.25a1.25 1.25 0 0 0-2.5 0 1.25 1.25 0 0 0 2.5 0zM12 9a3 3 0 1 1 0 6 3 3 0 0 1 0-6z"/>
              </svg>
            </a>
          {% endif %}
          {% if settings.social_facebook != blank %}
            <a href="{{ settings.social_facebook }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Facebook">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>

    </div>

    {%- comment -%} Footer Bottom {%- endcomment -%}
    <div class="footer__bottom">
      <p class="footer__copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. Alle Rechte vorbehalten.
      </p>
      <div class="footer__payment">
        {%- for type in shop.enabled_payment_types -%}
          {{ type | payment_type_svg_tag: class: 'footer__payment-icon' }}
        {%- endfor -%}
      </div>
    </div>

  </div>
</footer>

<style>
  .footer {
    background: var(--color-text);
    color: var(--color-background);
    padding: 3rem 0 1.5rem;
    margin-top: var(--section-spacing);
  }

  .footer__content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  @media (max-width: 767px) {
    .footer__content {
      grid-template-columns: 1fr;
    }
  }

  .footer__heading {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--color-background);
  }

  .footer__text {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
  }

  .footer__menu {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer__menu-item {
    margin-bottom: 0.75rem;
  }

  .footer__link {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color var(--duration-short);
  }

  .footer__link:hover {
    color: var(--color-background);
  }

  .footer__social {
    display: flex;
    gap: 1rem;
  }

  .footer__social-link {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    transition: all var(--duration-short);
  }

  .footer__social-link:hover {
    color: var(--color-background);
    border-color: var(--color-background);
  }

  .footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer__copyright {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
  }

  .footer__payment {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .footer__payment-icon {
    height: 30px;
    width: auto;
    opacity: 0.7;
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer menu",
      "default": "footer"
    }
  ]
}
{% endschema %}
