            {%- if section.settings.social_tiktok != blank -%}
              <a href="{{ section.settings.social_tiktok }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="TikTok">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                </svg>
              </a>
            {%- endif -%}
            {%- if section.settings.social_x != blank -%}
              <a href="{{ section.settings.social_x }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="X">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
    
    {%- comment -%} ========== BOTTOM BAR ========== {%- endcomment -%}
    <div class="footer__bottom">
      <div class="footer__bottom-inner">
        {%- comment -%} Copyright (Left) {%- endcomment -%}
        <p class="footer__copyright">
          &copy; {{ 'now' | date: '%Y' }} {{ section.settings.company_name | default: shop.name }}{% if section.settings.copyright_text != blank %} | {{ section.settings.copyright_text }}{% endif %}
        </p>
        
        {%- comment -%} Legal Links (Right) {%- endcomment -%}
        {%- assign legal_menu = linklists[section.settings.legal_menu] -%}
        {%- if legal_menu.links.size > 0 -%}
          <nav class="footer__legal-links">
            {%- for link in legal_menu.links -%}
              <a href="{{ link.url }}" class="footer__legal-link">{{ link.title }}</a>
            {%- endfor -%}
          </nav>
        {%- endif -%}
      </div>
    </div>
    
  </div>
  
  {%- comment -%} Scroll to Top Button {%- endcomment -%}
  {%- if section.settings.show_scroll_top -%}
    <button type="button" class="footer__scroll-top" data-scroll-top aria-label="Nach oben scrollen">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 15l-6-6-6 6"/>
      </svg>
    </button>
  {%- endif -%}
</footer>

<style>
  .site-footer {
    background: {{ section.settings.background_color | default: '#f9fafb' }};
    color: {{ section.settings.text_color | default: '#374151' }};
    position: relative;
  }
  
  .footer__container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  @media (min-width: 768px) {
    .footer__container {
      padding: 0 2rem;
    }
  }
  
  /* ========== MAIN CONTENT GRID ========== */
  .footer__main {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    padding: 3rem 0;
    border-bottom: 1px solid {{ section.settings.border_color | default: '#e5e7eb' }};
  }
  
  @media (min-width: 640px) {
    .footer__main {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 900px) {
    .footer__main {
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 2.5rem;
    }
  }
  
  @media (min-width: 1200px) {
    .footer__main {
      padding: 4rem 0;
      gap: 3rem;
    }
  }
  
  /* ========== BRAND COLUMN ========== */
  .footer__brand {
    grid-column: 1 / -1;
  }
  
  @media (min-width: 900px) {
    .footer__brand {
      grid-column: span 1;
    }
  }
  
  .footer__logo {
    display: inline-block;
    margin-bottom: 1rem;
  }
  
  .footer__logo img {
    height: auto;
    max-width: 100%;
  }
  
  .footer__logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: {{ section.settings.heading_color | default: '#111827' }};
    text-decoration: none;
    display: inline-block;
    margin-bottom: 1rem;
  }
  
  .footer__description {
    font-size: 0.875rem;
    line-height: 1.7;
    color: {{ section.settings.text_color | default: '#374151' }};
    margin: 0 0 1.5rem;
    max-width: 280px;
  }
  
  /* ========== COLUMNS ========== */
  .footer__column {
    min-width: 0;
  }
  
  .footer__heading {
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: {{ section.settings.heading_color | default: '#111827' }};
    margin: 0 0 1rem;
  }
  
  /* Text Content Block */
  .footer__text-content {
    font-size: 0.875rem;
    line-height: 1.7;
    color: {{ section.settings.text_color | default: '#374151' }};
  }
  
  .footer__text-content p {
    margin: 0 0 0.75rem;
  }
  
  .footer__text-content p:last-child {
    margin-bottom: 0;
  }
  
  .footer__text-content a {
    color: {{ section.settings.text_color | default: '#374151' }};
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .footer__text-content a:hover {
    color: {{ section.settings.heading_color | default: '#111827' }};
  }
  
  /* Menu */
  .footer__menu {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .footer__menu li {
    margin-bottom: 0.5rem;
  }
  
  .footer__menu--spaced {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid {{ section.settings.border_color | default: '#e5e7eb' }};
  }
  
  .footer__link {
    font-size: 0.875rem;
    color: {{ section.settings.text_color | default: '#374151' }};
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .footer__link:hover {
    color: {{ section.settings.heading_color | default: '#111827' }};
  }
  
  /* Brands Multi-Column */
  .footer__column--brands {
    min-width: 200px;
  }
  
  @media (min-width: 900px) {
    .footer__column--brands {
      grid-column: span 2;
    }
  }
  
  .footer__brands-grid {
    display: grid;
    grid-template-columns: repeat(var(--brand-columns, 2), 1fr);
    gap: 0.375rem 1.5rem;
  }
  
  .footer__brand-link {
    font-size: 0.875rem;
    color: {{ section.settings.text_color | default: '#374151' }};
    text-decoration: none;
    transition: color 0.2s;
    padding: 0.25rem 0;
  }
  
  .footer__brand-link:hover {
    color: {{ section.settings.heading_color | default: '#111827' }};
  }
  
  /* ========== MIDDLE BAR (Payment & Social) ========== */
  .footer__middle-bar {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    padding: 1.5rem 0;
    border-bottom: 1px solid {{ section.settings.border_color | default: '#e5e7eb' }};
  }
  
  @media (min-width: 768px) {
    .footer__middle-bar {
      flex-direction: row;
      justify-content: space-between;
    }
  }
  
  /* Payment Icons */
  .footer__payments {
    display: flex;
    align-items: center;
  }
  
  .footer__payment-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .footer__payment-item {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #ffffff;
    border-radius: 4px;
    padding: 0.25rem;
  }
  
  .footer__payment-icon {
    height: 24px;
    width: auto;
  }
  
  /* Social Icons */
  .footer__social {
    display: flex;
    gap: 0.5rem;
  }
  
  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: {{ section.settings.heading_color | default: '#111827' }};
    color: #ffffff;
    transition: opacity 0.2s;
  }
  
  .footer__social-link:hover {
    opacity: 0.8;
  }
  
  /* ========== BOTTOM BAR ========== */
  .footer__bottom {
    padding: 1.25rem 0;
  }
  
  .footer__bottom-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    text-align: center;
  }
  
  @media (min-width: 768px) {
    .footer__bottom-inner {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }
  
  .footer__copyright {
    font-size: 0.8125rem;
    color: {{ section.settings.text_color | default: '#374151' }};
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .footer__legal-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem 1.25rem;
  }
  
  .footer__legal-link {
    font-size: 0.8125rem;
    color: {{ section.settings.text_color | default: '#374151' }};
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .footer__legal-link:hover {
    color: {{ section.settings.heading_color | default: '#111827' }};
  }
  
  /* ========== SCROLL TO TOP ========== */
  .footer__scroll-top {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #ffffff;
    border: 1px solid {{ section.settings.border_color | default: '#e5e7eb' }};
    border-radius: 50%;
    cursor: pointer;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s;
    z-index: 100;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }
  
  .footer__scroll-top.is-visible {
    opacity: 1;
    visibility: visible;
  }
  
  .footer__scroll-top:hover {
    background: {{ section.settings.heading_color | default: '#111827' }};
    border-color: {{ section.settings.heading_color | default: '#111827' }};
    color: #ffffff;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const scrollTopBtn = document.querySelector('[data-scroll-top]');
  
  if (scrollTopBtn) {
    // Show/hide based on scroll position
    const toggleVisibility = () => {
      if (window.scrollY > 400) {
        scrollTopBtn.classList.add('is-visible');
      } else {
        scrollTopBtn.classList.remove('is-visible');
      }
    };
    
    window.addEventListener('scroll', toggleVisibility, { passive: true });
    toggleVisibility();
    
    // Scroll to top on click
    scrollTopBtn.addEventListener('click', () => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  }
});
</script>

