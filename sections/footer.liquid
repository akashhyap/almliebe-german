{% comment %}
  FOOTER SECTION - Restructured Layout
  
  Row 1: Centered logo (optional)
  Row 2: Menu columns (with split option for long menus)
  Row 3: Payment icons + Social icons
  Row 4: Copyright + Legal menu
{% endcomment %}

<footer class="site-footer" data-footer>
  <div class="footer__container">
    
    {%- comment -%} ========== ROW 1: LOGO (Centered) ========== {%- endcomment -%}
    {%- if section.settings.logo != blank -%}
      <div class="footer__logo-row">
        <a href="/" class="footer__logo">
          <img 
            src="{{ section.settings.logo | image_url: width: 400 }}" 
            alt="{{ shop.name }}"
            width="{{ section.settings.logo_width | default: 150 }}"
            height="auto"
            loading="lazy"
          >
        </a>
      </div>
    {%- endif -%}
    
    {%- comment -%} ========== ROW 2: MENU COLUMNS ========== {%- endcomment -%}
    <div class="footer__menus-row">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
        
          {%- when 'menu' -%}
            {%- assign menu = linklists[block.settings.menu] -%}
            {%- if menu.links.size > 0 -%}
              {%- assign split_menu = false -%}
              {%- if block.settings.split_columns and menu.links.size > 8 -%}
                {%- assign split_menu = true -%}
                {%- assign half_point = menu.links.size | divided_by: 2 | ceil -%}
              {%- endif -%}
              
              <div class="footer__column{% if split_menu %} footer__column--split{% endif %}" {{ block.shopify_attributes }}>
                <h3 class="footer__heading">{{ block.settings.title | default: menu.title }}</h3>
                
                {%- if split_menu -%}
                  <div class="footer__menu-split">
                    <ul class="footer__menu">
                      {%- for link in menu.links -%}
                        {%- if forloop.index <= half_point -%}
                          <li><a href="{{ link.url }}" class="footer__link">{{ link.title }}</a></li>
                        {%- endif -%}
                      {%- endfor -%}
                    </ul>
                    <ul class="footer__menu">
                      {%- for link in menu.links -%}
                        {%- if forloop.index > half_point -%}
                          <li><a href="{{ link.url }}" class="footer__link">{{ link.title }}</a></li>
                        {%- endif -%}
                      {%- endfor -%}
                    </ul>
                  </div>
                {%- else -%}
                  <ul class="footer__menu">
                    {%- for link in menu.links -%}
                      <li><a href="{{ link.url }}" class="footer__link">{{ link.title }}</a></li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </div>
            {%- endif -%}
          
          {%- when 'text' -%}
            <div class="footer__column" {{ block.shopify_attributes }}>
              {%- if block.settings.title != blank -%}
                <h3 class="footer__heading">{{ block.settings.title }}</h3>
              {%- endif -%}
              <div class="footer__text-content">
                {{ block.settings.text }}
              </div>
            </div>
            
        {%- endcase -%}
      {%- endfor -%}
    </div>
    
    {%- comment -%} ========== ROW 3: PAYMENT & SOCIAL ========== {%- endcomment -%}
    {%- if section.settings.show_payment_icons or section.settings.show_social -%}
      <div class="footer__icons-row">
        {%- comment -%} Payment Icons {%- endcomment -%}
        <div class="footer__payments">
          {%- if section.settings.show_payment_icons -%}
            {%- assign enabled_payments = shop.enabled_payment_types -%}
            {%- if enabled_payments.size > 0 -%}
              <ul class="footer__payment-list">
                {%- for type in enabled_payments -%}
                  <li class="footer__payment-item">
                    {{ type | payment_type_svg_tag: class: 'footer__payment-icon' }}
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
          {%- endif -%}
        </div>
        
        {%- comment -%} Social Icons {%- endcomment -%}
        {%- if section.settings.show_social -%}
          <div class="footer__social">
            {%- if section.settings.social_facebook != blank -%}
              <a href="{{ section.settings.social_facebook }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Facebook">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                </svg>
              </a>
            {%- endif -%}
            {%- if section.settings.social_instagram != blank -%}
              <a href="{{ section.settings.social_instagram }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Instagram">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                </svg>
              </a>
            {%- endif -%}
            {%- if section.settings.social_pinterest != blank -%}
              <a href="{{ section.settings.social_pinterest }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Pinterest">
