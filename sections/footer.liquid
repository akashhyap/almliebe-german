{% comment %}
  FOOTER SECTION - Optimized Structure
  
  Features:
  - Logo & description
  - Multiple column types (text, menu, brands)
  - Contact info with custom text
  - Payment icons
  - Social icons in bottom bar
  - Copyright with legal links
  - Scroll to top button
{% endcomment %}

<footer class="site-footer" data-footer>
  <div class="footer__container">
    
    {%- comment -%} ========== MAIN FOOTER CONTENT ========== {%- endcomment -%}
    <div class="footer__main">
      
      {%- comment -%} Logo & Newsletter Column (First) {%- endcomment -%}
      {%- if section.settings.show_brand_column -%}
        <div class="footer__brand">
          {%- if section.settings.logo != blank -%}
            <a href="/" class="footer__logo">
              <img 
                src="{{ section.settings.logo | image_url: width: 400 }}" 
                alt="{{ shop.name }}"
                width="{{ section.settings.logo_width | default: 150 }}"
                height="auto"
                loading="lazy"
              >
            </a>
          {%- else -%}
            <a href="/" class="footer__logo-text">{{ shop.name }}</a>
          {%- endif -%}
          
          {%- if section.settings.description != blank -%}
            <p class="footer__description">{{ section.settings.description }}</p>
          {%- endif -%}
        </div>
      {%- endif -%}
      
      {%- comment -%} Dynamic Columns (from blocks) {%- endcomment -%}
      {%- for block in section.blocks -%}
        {%- case block.type -%}
        
          {%- comment -%} TEXT BLOCK - Custom text content {%- endcomment -%}
          {%- when 'text' -%}
            <div class="footer__column" {{ block.shopify_attributes }}>
              {%- if block.settings.title != blank -%}
                <h3 class="footer__heading">{{ block.settings.title }}</h3>
              {%- endif -%}
              <div class="footer__text-content">
                {{ block.settings.text }}
              </div>
              {%- comment -%} Optional menu below text {%- endcomment -%}
              {%- assign text_menu = linklists[block.settings.menu] -%}
              {%- if text_menu.links.size > 0 -%}
                <ul class="footer__menu footer__menu--spaced">
                  {%- for link in text_menu.links -%}
                    <li><a href="{{ link.url }}" class="footer__link">{{ link.title }}</a></li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
          
          {%- comment -%} MENU BLOCK - Simple menu column {%- endcomment -%}
          {%- when 'menu' -%}
            {%- assign menu = linklists[block.settings.menu] -%}
            {%- if menu.links.size > 0 -%}
              <div class="footer__column" {{ block.shopify_attributes }}>
                <h3 class="footer__heading">{{ block.settings.title | default: menu.title }}</h3>
                <ul class="footer__menu">
                  {%- for link in menu.links -%}
                    <li><a href="{{ link.url }}" class="footer__link">{{ link.title }}</a></li>
                  {%- endfor -%}
                </ul>
              </div>
            {%- endif -%}
          
          {%- comment -%} BRANDS BLOCK - Multi-column brand links {%- endcomment -%}
          {%- when 'brands' -%}
            {%- assign brands_menu = linklists[block.settings.menu] -%}
            {%- if brands_menu.links.size > 0 -%}
              <div class="footer__column footer__column--brands" {{ block.shopify_attributes }}>
                <h3 class="footer__heading">{{ block.settings.title | default: 'Marken' }}</h3>
                <div class="footer__brands-grid" style="--brand-columns: {{ block.settings.columns | default: 2 }}">
                  {%- for link in brands_menu.links -%}
                    <a href="{{ link.url }}" class="footer__brand-link">{{ link.title }}</a>
                  {%- endfor -%}
                </div>
              </div>
            {%- endif -%}
            
        {%- endcase -%}
      {%- endfor -%}
      
    </div>
    
    {%- comment -%} ========== PAYMENT & SOCIAL ROW ========== {%- endcomment -%}
    {%- if section.settings.show_payment_icons or section.settings.show_social -%}
      <div class="footer__middle-bar">
        {%- comment -%} Payment Icons (Left) {%- endcomment -%}
        <div class="footer__payments">
          {%- if section.settings.show_payment_icons -%}
            {%- assign enabled_payments = shop.enabled_payment_types -%}
            {%- if enabled_payments.size > 0 -%}
              <ul class="footer__payment-list">
                {%- for type in enabled_payments -%}
                  <li class="footer__payment-item">
                    {{ type | payment_type_svg_tag: class: 'footer__payment-icon' }}
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
          {%- endif -%}
        </div>
        
        {%- comment -%} Social Icons (Right) {%- endcomment -%}
        {%- if section.settings.show_social -%}
          <div class="footer__social">
            {%- if section.settings.social_facebook != blank -%}
              <a href="{{ section.settings.social_facebook }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Facebook">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                </svg>
              </a>
            {%- endif -%}
            {%- if section.settings.social_instagram != blank -%}
              <a href="{{ section.settings.social_instagram }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Instagram">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
