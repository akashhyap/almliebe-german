{% comment %}
  CART DRAWER - Polished UX
  - Smooth quantity transitions
  - Button press feedback
  - Proper delete collapse animation
  - Inventory-aware (disables + at stock limit)
{% endcomment %}

<div class="cart-drawer" data-cart-drawer aria-hidden="true">
  <div class="cart-drawer__overlay" data-cart-drawer-close></div>
  
  <div class="cart-drawer__inner">
    {%- comment -%} Header {%- endcomment -%}
    <div class="cart-drawer__header">
      <h2 class="cart-drawer__title">{{ 'cart.general.title' | t | default: 'WARENKORB' }}</h2>
      <button type="button" class="cart-drawer__close" data-cart-drawer-close aria-label="{{ 'accessibility.close' | t | default: 'Schließen' }}">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
    </div>

    {%- comment -%} Free Shipping Progress - Only show when cart has items {%- endcomment -%}
    {%- if cart.item_count > 0 -%}
      <div class="cart-drawer__shipping-progress" data-shipping-progress>
        <div class="shipping-progress__message" data-shipping-message>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
          <span>{{ 'cart.free_shipping.qualified' | t | default: 'Kostenloser Versand!' }}</span>
        </div>
        <div class="shipping-progress__bar">
          <div class="shipping-progress__fill" data-shipping-fill style="width: 100%"></div>
        </div>
      </div>
    {%- endif -%}

    {%- comment -%} Cart Content {%- endcomment -%}
    <div class="cart-drawer__content" data-cart-drawer-content>
      {%- if cart.item_count > 0 -%}
        <ul class="cart-drawer__items">
          {%- for item in cart.items -%}
            {%- assign variant_inventory = item.variant.inventory_quantity -%}
            {%- assign inventory_policy = item.variant.inventory_policy -%}
            {%- assign inventory_management = item.variant.inventory_management -%}
            
            {%- if inventory_management == blank or inventory_management == null or inventory_policy == 'continue' -%}
              {%- assign max_quantity = 9999 -%}
            {%- else -%}
              {%- assign max_quantity = variant_inventory -%}
            {%- endif -%}
            
            {%- assign at_max = false -%}
            {%- if item.quantity >= max_quantity -%}
              {%- assign at_max = true -%}
            {%- endif -%}
            
            <li 
              class="cart-drawer__item" 
              data-cart-drawer-item 
              data-line="{{ forloop.index }}" 
              data-key="{{ item.key }}"
              data-variant-id="{{ item.variant_id }}"
              data-max-quantity="{{ max_quantity }}"
            >
              <a href="{{ item.url }}" class="cart-drawer__item-image">
                {%- if item.image -%}
                  <img
                    src="{{ item.image | image_url: width: 200 }}"
                    alt="{{ item.image.alt | escape | default: item.product.title }}"
                    width="90"
                    height="110"
                    loading="lazy"
                  >
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'cart-drawer__placeholder' }}
                {%- endif -%}
              </a>

              <div class="cart-drawer__item-details">
                <div class="cart-drawer__item-header">
                  <a href="{{ item.url }}" class="cart-drawer__item-title">
                    {{ item.product.title }}
                  </a>
                  <button 
                    type="button" 
                    class="cart-drawer__item-remove"
                    data-cart-drawer-remove
                    data-line="{{ forloop.index }}"
                    aria-label="{{ 'cart.general.remove' | t | default: 'Entfernen' }}"
                  >
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                      <polyline points="3 6 5 6 21 6"/>
                      <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                    </svg>
                  </button>
                </div>

                {%- unless item.product.has_only_default_variant -%}
                  <p class="cart-drawer__item-variant">{{ item.variant.title }}</p>
                {%- endunless -%}

                <div class="cart-drawer__item-footer">
                  <div class="cart-drawer__item-price" data-item-price>
                    {%- if item.original_line_price != item.final_line_price -%}
                      <span class="cart-drawer__price-sale">{{ item.final_line_price | money }}</span>
                      <span class="cart-drawer__price-compare">{{ item.original_line_price | money }}</span>
                    {%- else -%}
                      <span>{{ item.final_line_price | money }}</span>
                    {%- endif -%}
                  </div>

                  <div class="cart-drawer__item-quantity">
                    <button 
                      type="button" 
                      class="cart-drawer__qty-btn cart-drawer__qty-btn--minus"
                      data-cart-drawer-minus
                      data-line="{{ forloop.index }}"
                      aria-label="Menge verringern"
                    >−</button>
                    <span class="cart-drawer__qty-value" data-cart-drawer-qty>{{ item.quantity }}</span>
                    <button 
                      type="button" 
                      class="cart-drawer__qty-btn cart-drawer__qty-btn--plus{% if at_max %} is-disabled{% endif %}"
                      data-cart-drawer-plus
                      data-line="{{ forloop.index }}"
                      aria-label="Menge erhöhen"
                      {% if at_max %}disabled{% endif %}
                    >+</button>
                  </div>
                </div>
              </div>
            </li>
          {%- endfor -%}
        </ul>

      {%- else -%}
        <div class="cart-drawer__empty">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#9ca3af" stroke-width="1.5">
            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
            <line x1="3" y1="6" x2="21" y2="6"/>
            <path d="M16 10a4 4 0 0 1-8 0"/>
          </svg>
          <p>{{ 'cart.general.empty' | t | default: 'Ihr Warenkorb ist leer' }}</p>
          <a href="/collections/all" class="cart-drawer__continue-btn" data-cart-drawer-close>
            {{ 'cart.general.continue_shopping' | t | default: 'Weiter einkaufen' }}
          </a>
        </div>
      {%- endif -%}
    </div>

    {%- if cart.item_count > 0 -%}
      <div class="cart-drawer__footer">
        <div class="cart-drawer__summary">
          <div class="cart-drawer__summary-row">
            <span>{{ 'cart.general.subtotal' | t | default: 'Zwischensumme' }}</span>
            <span data-cart-subtotal>{{ cart.total_price | money }}</span>
          </div>
          <div class="cart-drawer__summary-row">
            <span>{{ 'cart.general.shipping' | t | default: 'Versand' }}</span>
            <span data-cart-shipping>{{ 'cart.shipping.free' | t | default: 'Kostenlos' }}</span>
          </div>
          <div class="cart-drawer__summary-row cart-drawer__summary-row--total">
            <span>{{ 'cart.general.total' | t | default: 'Gesamt' }}</span>
            <span data-cart-total>{{ cart.total_price | money }}</span>
          </div>
        </div>
        
        <a href="/checkout" class="cart-drawer__checkout-btn">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
          </svg>
          {{ 'cart.general.checkout_securely' | t | default: 'SICHER ZUR KASSE' }}
        </a>
        
        <div class="cart-drawer__payment-icons">
          <img src="https://cdn.shopify.com/shopifycloud/checkout-web/assets/c1.en/assets/visa.sxIq5Dot.svg" alt="Visa" width="38" height="24">
          <img src="https://cdn.shopify.com/shopifycloud/checkout-web/assets/c1.en/assets/mastercard.1c4_lyMp.svg" alt="Mastercard" width="38" height="24">
          <img src="https://cdn.shopify.com/shopifycloud/checkout-web/assets/c1.en/assets/amex.Csr7hRoy.svg" alt="Amex" width="38" height="24">
          <img src="https://cdn.shopify.com/shopifycloud/checkout-web/assets/c1.en/assets/paypal.CyTEpVgk.svg" alt="PayPal" width="38" height="24">
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

<script>
(function() {
  'use strict';
  
  var drawer = document.querySelector('[data-cart-drawer]');
  if (!drawer) return;
  
  var FREE_SHIPPING_THRESHOLD = 5000;
  var isUpdating = false;
  var pendingUpdate = null;
  
  // ===========================================
  // OPEN / CLOSE
  // ===========================================
  
  async function openCartDrawer() {
    drawer.classList.add('is-active');
    drawer.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';
    await refreshDrawer();
  }
  
  function closeCartDrawer() {
    drawer.classList.remove('is-active');
    drawer.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
  }
  
  window.openCartDrawer = openCartDrawer;
  window.closeCartDrawer = closeCartDrawer;
  
  drawer.querySelectorAll('[data-cart-drawer-close]').forEach(function(btn) {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      closeCartDrawer();
    });
  });
  
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && drawer.classList.contains('is-active')) {
      closeCartDrawer();
    }
  });
  
  // ===========================================
  // SHIPPING PROGRESS
  // ===========================================
  
  function updateShippingProgress(totalCents) {
    var progressFill = drawer.querySelector('[data-shipping-fill]');
    var progressMessage = drawer.querySelector('[data-shipping-message]');
    var shippingEl = drawer.querySelector('[data-cart-shipping]');
    
    var progress = Math.min((totalCents / FREE_SHIPPING_THRESHOLD) * 100, 100);
    var remaining = FREE_SHIPPING_THRESHOLD - totalCents;
    
    if (progressFill) {
      progressFill.style.width = progress + '%';
      progressFill.style.background = '#111827';
    }
    
    if (progressMessage) {
      if (totalCents >= FREE_SHIPPING_THRESHOLD) {
        progressMessage.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg><span>Kostenloser Versand!</span>';
        progressMessage.classList.remove('shipping-progress__message--incomplete');
        if (shippingEl) shippingEl.textContent = 'Kostenlos';
      } else {
        var formattedRemaining = new Intl.NumberFormat('de-DE', { style: 'currency', currency: 'EUR' }).format(remaining / 100);
        progressMessage.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="1" y="3" width="15" height="13"/><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/><circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/></svg><span>Noch ' + formattedRemaining + ' bis zum kostenlosen Versand</span>';
        progressMessage.classList.add('shipping-progress__message--incomplete');
        if (shippingEl) shippingEl.textContent = 'Wird berechnet';
      }
    }
  }
  
  // ===========================================
  // QUANTITY CONTROLS
  // ===========================================
  
  // MINUS button
  document.addEventListener('click', function(e) {
    var btn = e.target.closest('[data-cart-drawer-minus]');
    if (!btn) return;
    
    e.preventDefault();
    e.stopPropagation();
    e.stopImmediatePropagation();
    
    if (isUpdating) return;
    
    var line = parseInt(btn.getAttribute('data-line'));
    var item = btn.closest('[data-cart-drawer-item]');
    var qtyEl = item.querySelector('[data-cart-drawer-qty]');
    var currentQty = parseInt(qtyEl.textContent);
    var newQty = currentQty - 1;
    
    if (newQty < 0) return;
    
    // Immediate visual feedback
    btn.classList.add('is-pressed');
    setTimeout(function() { btn.classList.remove('is-pressed'); }, 150);
    
    // Update quantity display with animation
    qtyEl.classList.add('is-changing');
    setTimeout(function() {
      qtyEl.textContent = newQty;
      qtyEl.classList.remove('is-changing');
    }, 100);
    
    // Re-enable plus button
    var plusBtn = item.querySelector('[data-cart-drawer-plus]');
    if (plusBtn) {
      plusBtn.disabled = false;
      plusBtn.classList.remove('is-disabled');
    }
    
    if (newQty === 0) {
      // Delete animation
      removeItemWithAnimation(item, line);
    } else {
      // Update cart
      item.classList.add('is-loading');
      updateCart(line, newQty, item);
    }
  }, true);
  
  // PLUS button
  document.addEventListener('click', function(e) {
    var btn = e.target.closest('[data-cart-drawer-plus]');
    if (!btn) return;
    
    e.preventDefault();
    e.stopPropagation();
    e.stopImmediatePropagation();
    
    if (isUpdating || btn.disabled) return;
    
    var line = parseInt(btn.getAttribute('data-line'));
    var item = btn.closest('[data-cart-drawer-item]');
    var qtyEl = item.querySelector('[data-cart-drawer-qty]');
    var currentQty = parseInt(qtyEl.textContent);
    var maxQty = parseInt(item.getAttribute('data-max-quantity')) || 9999;
    var newQty = currentQty + 1;
    
    if (newQty > maxQty) return;
    
    // Immediate visual feedback
    btn.classList.add('is-pressed');
    setTimeout(function() { btn.classList.remove('is-pressed'); }, 150);
    
    // Update quantity display with animation
    qtyEl.classList.add('is-changing');
    setTimeout(function() {
      qtyEl.textContent = newQty;
      qtyEl.classList.remove('is-changing');
    }, 100);
    
    // Disable plus if at max
    if (newQty >= maxQty) {
      btn.disabled = true;
      btn.classList.add('is-disabled');
    }
    
    // Update cart
    item.classList.add('is-loading');
    updateCart(line, newQty, item);
  }, true);
  
  // REMOVE button
  document.addEventListener('click', function(e) {
    var btn = e.target.closest('[data-cart-drawer-remove]');
    if (!btn) return;
    
    e.preventDefault();
    e.stopPropagation();
    e.stopImmediatePropagation();
    
    if (isUpdating) return;
    
    var line = parseInt(btn.getAttribute('data-line'));
    var item = btn.closest('[data-cart-drawer-item]');
    
    // Immediate visual feedback
    btn.classList.add('is-pressed');
    
    removeItemWithAnimation(item, line);
  }, true);
  
  // ===========================================
  // REMOVE WITH ANIMATION
  // ===========================================
  
  function removeItemWithAnimation(item, line) {
    // Get current height for smooth collapse
    var itemHeight = item.offsetHeight;
    item.style.height = itemHeight + 'px';
    
    // Force reflow
    item.offsetHeight;
    
    // Start animation
    item.classList.add('is-removing');
    item.style.height = '0px';
    
    // Wait for animation to complete, then update cart
    setTimeout(function() {
      updateCart(line, 0, item, true);
    }, 350);
  }
  
  // ===========================================
  // CART API
  // ===========================================
  
  async function updateCart(line, quantity, itemEl, skipRefreshAnimation) {
    isUpdating = true;
    
    try {
      var response = await fetch('/cart/change.js', {
        method: 'POST',
        headers: { 
          'Content-Type': 'application/json',
          'Accept': 'application/json'
        },
        body: JSON.stringify({ line: line, quantity: quantity })
      });
      
      var data = await response.json();
      
      if (!response.ok) {
        console.error('[CartDrawer] Error:', data.message);
        // Revert on error
        await refreshDrawer();
        return;
      }
      
      // Update header count immediately
      updateHeaderCartCount(data.item_count);
      
      // Update totals immediately
      updateTotals(data);
      
      // For quantity changes, just update the price and remove loading state
      if (quantity > 0 && itemEl) {
        itemEl.classList.remove('is-loading');
        // Price will be updated on next refresh or we can calculate it
      }
      
      // For removals or if we need full refresh
      if (quantity === 0 || !itemEl) {
        await refreshDrawer();
      }
      
      document.dispatchEvent(new CustomEvent('cart:updated', { detail: data }));
      
    } catch (error) {
      console.error('[CartDrawer] Update error:', error);
      await refreshDrawer();
    } finally {
      isUpdating = false;
    }
  }
  
  // ===========================================
  // UPDATE TOTALS
  // ===========================================
  
  function updateTotals(cartData) {
    var subtotalEl = drawer.querySelector('[data-cart-subtotal]');
    var totalEl = drawer.querySelector('[data-cart-total]');
    
    var formattedTotal = new Intl.NumberFormat('de-DE', { 
      style: 'currency', 
      currency: 'EUR' 
    }).format(cartData.total_price / 100);
    
    if (subtotalEl) {
      subtotalEl.classList.add('is-updating');
      setTimeout(function() {
        subtotalEl.textContent = formattedTotal;
        subtotalEl.classList.remove('is-updating');
      }, 150);
    }
    
    if (totalEl) {
      totalEl.classList.add('is-updating');
      setTimeout(function() {
        totalEl.textContent = formattedTotal;
        totalEl.classList.remove('is-updating');
      }, 150);
    }
    
    updateShippingProgress(cartData.total_price);
  }
  
  // ===========================================
  // REFRESH DRAWER
  // ===========================================
  
  async function refreshDrawer() {
    try {
      var response = await fetch('/?section_id=cart-drawer');
      var html = await response.text();
      
      var parser = new DOMParser();
      var doc = parser.parseFromString(html, 'text/html');
      
      // Update shipping progress
      var newShipping = doc.querySelector('[data-shipping-progress]');
      var currentShipping = drawer.querySelector('[data-shipping-progress]');
      var header = drawer.querySelector('.cart-drawer__header');
      
      if (newShipping && currentShipping) {
        currentShipping.outerHTML = newShipping.outerHTML;
      } else if (newShipping && !currentShipping && header) {
        header.insertAdjacentHTML('afterend', newShipping.outerHTML);
      } else if (!newShipping && currentShipping) {
        currentShipping.remove();
      }
      
      // Update content
      var newContent = doc.querySelector('[data-cart-drawer-content]');
      var currentContent = drawer.querySelector('[data-cart-drawer-content]');
      
      if (newContent && currentContent) {
        currentContent.innerHTML = newContent.innerHTML;
      }
      
      // Update footer
      var newFooter = doc.querySelector('.cart-drawer__footer');
      var currentFooter = drawer.querySelector('.cart-drawer__footer');
      
      if (newFooter && currentFooter) {
        currentFooter.outerHTML = newFooter.outerHTML;
      } else if (newFooter && !currentFooter) {
        drawer.querySelector('.cart-drawer__inner').appendChild(newFooter.cloneNode(true));
      } else if (!newFooter && currentFooter) {
        currentFooter.remove();
      }
      
      var cartData = await fetch('/cart.js').then(function(r) { return r.json(); });
      updateHeaderCartCount(cartData.item_count);
      updateShippingProgress(cartData.total_price);
      
    } catch (error) {
      console.error('[CartDrawer] Refresh error:', error);
    }
  }
  
  // ===========================================
  // HEADER CART COUNT
  // ===========================================
  
  function updateHeaderCartCount(count) {
    document.querySelectorAll('[data-cart-count]').forEach(function(el) {
      el.textContent = count;
      if (el.classList.contains('is-hidden') && count > 0) {
        el.classList.remove('is-hidden');
      } else if (count === 0) {
        el.classList.add('is-hidden');
      }
    });
  }
  
  // ===========================================
  // CART TRIGGERS
  // ===========================================
  
  function setupCartTriggers() {
    var cartBtn = document.getElementById('almliebe-cart-btn');
    if (cartBtn) {
      cartBtn.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        openCartDrawer();
      }, true);
    }
    
    document.querySelectorAll('[data-cart-trigger]').forEach(function(el) {
      el.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        openCartDrawer();
      }, true);
    });
  }
  
  // ===========================================
  // INIT
  // ===========================================
  
  function init() {
    setupCartTriggers();
    
    document.addEventListener('cart:item-added', function() {
      openCartDrawer();
    });
  }
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>

<style>
  .cart-drawer {
    position: fixed;
    inset: 0;
    z-index: 9999;
    visibility: hidden;
    pointer-events: none;
  }
  
  .cart-drawer.is-active {
    visibility: visible;
    pointer-events: auto;
  }
  
  .cart-drawer__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
    transition: opacity 0.3s ease;
    cursor: pointer;
  }
  
  .cart-drawer.is-active .cart-drawer__overlay {
    opacity: 1;
  }
  
  .cart-drawer__inner {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    max-width: 420px;
    background: #ffffff;
    display: flex;
    flex-direction: column;
    transform: translateX(100%);
    transition: transform 0.3s ease;
    box-shadow: -4px 0 20px rgba(0, 0, 0, 0.15);
  }
  
  .cart-drawer.is-active .cart-drawer__inner {
    transform: translateX(0);
  }
  
  .cart-drawer__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid #e5e7eb;
    flex-shrink: 0;
  }
  
  .cart-drawer__title {
    font-size: 0.9375rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    margin: 0;
  }
  
  .cart-drawer__close {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    cursor: pointer;
    color: #374151;
    transition: color 0.2s;
  }
  
  .cart-drawer__close:hover {
    color: #000000;
  }
  
  .cart-drawer__shipping-progress {
    padding: 1rem 1.5rem;
    background: #f9fafb;
    flex-shrink: 0;
  }
  
  .shipping-progress__message {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151;
    margin-bottom: 0.5rem;
  }
  
  .shipping-progress__message svg {
    stroke: #374151;
    flex-shrink: 0;
  }
  
  .shipping-progress__message--incomplete {
    color: #374151;
  }
  
  .shipping-progress__message--incomplete svg {
    stroke: #374151;
  }
  
  .shipping-progress__bar {
    height: 4px;
    background: #e5e7eb;
    border-radius: 2px;
    overflow: hidden;
  }
  
  .shipping-progress__fill {
    height: 100%;
    background: #111827;
    border-radius: 2px;
    transition: width 0.3s ease;
  }
  
  .cart-drawer__content {
    flex: 1;
    overflow-y: auto;
    padding: 0;
