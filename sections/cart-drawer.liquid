<script>
document.addEventListener('DOMContentLoaded', function() {
  const drawer = document.querySelector('[data-cart-drawer]');
  if (!drawer) return;

  const closeTriggers = drawer.querySelectorAll('[data-cart-drawer-close]');
  const FREE_SHIPPING_THRESHOLD = 9900; // €99 in cents

  // Open drawer - make globally available
  window.openCartDrawer = function() {
    drawer.classList.add('is-active');
    drawer.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';
    updateShippingProgress();
    initDiscountSection();
  };

  // Close drawer
  function closeDrawer() {
    drawer.classList.remove('is-active');
    drawer.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
  }

  // Close triggers
  closeTriggers.forEach(trigger => {
    trigger.addEventListener('click', closeDrawer);
  });

  // Close on escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && drawer.classList.contains('is-active')) {
      closeDrawer();
    }
  });

  // Format money
  function formatMoney(cents) {
    return new Intl.NumberFormat('de-DE', { 
      style: 'currency', 
      currency: 'EUR' 
    }).format(cents / 100);
  }

  // Update shipping progress
  function updateShippingProgress() {
    const subtotalEl = drawer.querySelector('[data-cart-subtotal]');
    if (!subtotalEl) return;
    
    // Parse the current subtotal from the DOM
    const subtotalText = subtotalEl.textContent.replace(/[^0-9,]/g, '').replace(',', '.');
    const subtotalCents = Math.round(parseFloat(subtotalText) * 100) || 0;
    
    const progressFill = drawer.querySelector('[data-shipping-fill]');
    const progressMessage = drawer.querySelector('[data-shipping-message]');
    const shippingEl = drawer.querySelector('[data-cart-shipping]');
    
    const progress = Math.min((subtotalCents / FREE_SHIPPING_THRESHOLD) * 100, 100);
    const remaining = FREE_SHIPPING_THRESHOLD - subtotalCents;
    
    if (progressFill) {
      progressFill.style.width = progress + '%';
      progressFill.style.background = subtotalCents >= FREE_SHIPPING_THRESHOLD ? '#059669' : '#111827';
    }
    
    if (progressMessage) {
      if (subtotalCents >= FREE_SHIPPING_THRESHOLD) {
        progressMessage.innerHTML = `
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
          <span>Kostenloser Versand!</span>
        `;
        progressMessage.classList.remove('is-incomplete');
      } else {
        progressMessage.innerHTML = `
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="1" y="3" width="15" height="13"/><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/>
            <circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/>
          </svg>
          <span>Noch ${formatMoney(remaining)} bis zum kostenlosen Versand</span>
        `;
        progressMessage.classList.add('is-incomplete');
      }
    }
    
    if (shippingEl) {
      shippingEl.textContent = subtotalCents >= FREE_SHIPPING_THRESHOLD ? 'Kostenlos' : 'Wird berechnet';
    }
  }

  // ==========================================
  // DISCOUNT CODE FUNCTIONALITY
  // ==========================================
  
  function initDiscountSection() {
    const discountInput = drawer.querySelector('[data-discount-input]');
    const discountBtn = drawer.querySelector('[data-discount-apply]');
    const discountRemove = drawer.querySelector('[data-discount-remove]');
    
    if (!discountInput || !discountBtn) return;
    
    // Check for existing discounts on load
    checkExistingDiscounts();
    
    // Apply button click
    discountBtn.addEventListener('click', handleApplyDiscount);
    
    // Enter key in input
    discountInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        e.preventDefault();
        handleApplyDiscount();
      }
    });
    
    // Clear error on input
    discountInput.addEventListener('input', () => {
      hideDiscountMessages();
      discountInput.classList.remove('is-error', 'is-success');
    });
    
    // Remove discount
    if (discountRemove) {
      discountRemove.addEventListener('click', handleRemoveDiscount);
    }
  }
  
  async function checkExistingDiscounts() {
    try {
      const response = await fetch('/cart.js');
      const cart = await response.json();
      
      // Check for cart-level discounts
      if (cart.cart_level_discount_applications && cart.cart_level_discount_applications.length > 0) {
        const discount = cart.cart_level_discount_applications[0];
        showAppliedDiscount(discount.title, discount.total_allocated_amount);
      }
      // Also check total_discount
      else if (cart.total_discount > 0) {
        // Try to get discount code from line items
        let discountTitle = 'Rabatt';
        cart.items.forEach(item => {
          if (item.discounts && item.discounts.length > 0) {
            discountTitle = item.discounts[0].title || 'Rabatt';
          }
        });
        showAppliedDiscount(discountTitle, cart.total_discount);
      }
    } catch (error) {
      console.error('Error checking discounts:', error);
    }
  }
  
  async function handleApplyDiscount() {
    const discountInput = drawer.querySelector('[data-discount-input]');
    const discountBtn = drawer.querySelector('[data-discount-apply]');
    const code = discountInput.value.trim().toUpperCase();
    
    if (!code) {
      showDiscountError('Bitte geben Sie einen Rabattcode ein.');
      discountInput.classList.add('is-error');
      return;
    }
    
    // Set loading state
    discountBtn.classList.add('is-loading');
    discountBtn.disabled = true;
    hideDiscountMessages();
    
    try {
      // Apply discount via AJAX API
      const response = await fetch(window.Shopify?.routes?.root ? window.Shopify.routes.root + 'cart/update.js' : '/cart/update.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ discount: code })
      });
      
      if (!response.ok) {
        throw new Error('Network response was not ok');
      }
      
      // Wait a moment for Shopify to process
      await new Promise(resolve => setTimeout(resolve, 300));
      
      // Fetch updated cart to verify discount was applied
      const cartResponse = await fetch('/cart.js');
      const cart = await cartResponse.json();
      
      // Check if discount was applied
      const discountApplied = checkDiscountApplied(cart, code);
      
      if (discountApplied.success) {
        // Success!
        discountInput.value = '';
        discountInput.classList.add('is-success');
        showDiscountSuccess(`Code "${code}" wurde angewendet!`);
        showAppliedDiscount(code, discountApplied.amount);
        
        // Refresh cart drawer to show updated totals
        await refreshDrawer();
      } else {
        // Invalid code
        discountInput.classList.add('is-error');
        showDiscountError('Ungültiger Rabattcode. Bitte überprüfen Sie Ihre Eingabe.');
      }
      
    } catch (error) {
      console.error('Discount error:', error);
      showDiscountError('Es ist ein Fehler aufgetreten. Bitte versuchen Sie es erneut.');
      discountInput.classList.add('is-error');
    } finally {
      discountBtn.classList.remove('is-loading');
      discountBtn.disabled = false;
    }
  }
  
  function checkDiscountApplied(cart, code) {
    // Check cart-level discounts
    if (cart.cart_level_discount_applications && cart.cart_level_discount_applications.length > 0) {
      const match = cart.cart_level_discount_applications.find(
        d => d.title.toLowerCase() === code.toLowerCase()
      );
      if (match) {
        return { success: true, amount: match.total_allocated_amount };
      }
    }
    
    // Check line item discounts
    let totalDiscount = 0;
    let found = false;
    cart.items.forEach(item => {
      if (item.discounts && item.discounts.length > 0) {
        item.discounts.forEach(d => {
          if (d.title && d.title.toLowerCase() === code.toLowerCase()) {
            found = true;
            totalDiscount += d.amount;
          }
        });
      }
    });
    
    if (found) {
      return { success: true, amount: totalDiscount };
    }
    
    // Check if total_discount increased (fallback check)
    if (cart.total_discount > 0) {
      return { success: true, amount: cart.total_discount };
    }
    
    return { success: false, amount: 0 };
  }
  
  function showAppliedDiscount(code, amount) {
    const appliedEl = drawer.querySelector('[data-discount-applied]');
    const codeEl = drawer.querySelector('[data-discount-code]');
    const discountRow = drawer.querySelector('[data-discount-row]');
    const discountAmount = drawer.querySelector('[data-discount-amount]');
    
    if (appliedEl && codeEl) {
      codeEl.textContent = code;
      appliedEl.style.display = 'block';
    }
    
    if (discountRow && discountAmount && amount > 0) {
      discountAmount.textContent = '-' + formatMoney(amount);
      discountRow.style.display = 'flex';
    }
  }
  
  async function handleRemoveDiscount() {
    const appliedEl = drawer.querySelector('[data-discount-applied]');
    const discountRow = drawer.querySelector('[data-discount-row]');
    
    try {
      // Remove discount by sending empty string
      await fetch(window.Shopify?.routes?.root ? window.Shopify.routes.root + 'cart/update.js' : '/cart/update.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ discount: '' })
      });
      
      // Hide applied discount UI
      if (appliedEl) appliedEl.style.display = 'none';
      if (discountRow) discountRow.style.display = 'none';
      
      hideDiscountMessages();
      
      // Refresh cart drawer
      await refreshDrawer();
      
    } catch (error) {
      console.error('Error removing discount:', error);
    }
  }
  
  function showDiscountSuccess(message) {
    const successEl = drawer.querySelector('[data-discount-success]');
    const textEl = drawer.querySelector('[data-discount-success-text]');
    if (successEl && textEl) {
      textEl.textContent = message;
      successEl.style.display = 'flex';
    }
  }
  
  function showDiscountError(message) {
    const errorEl = drawer.querySelector('[data-discount-error]');
    const textEl = drawer.querySelector('[data-discount-error-text]');
    if (errorEl && textEl) {
      textEl.textContent = message;
      errorEl.style.display = 'flex';
    }
  }
  
  function hideDiscountMessages() {
    const successEl = drawer.querySelector('[data-discount-success]');
    const errorEl = drawer.querySelector('[data-discount-error]');
    if (successEl) successEl.style.display = 'none';
    if (errorEl) errorEl.style.display = 'none';
  }

  // Quantity minus buttons
  drawer.addEventListener('click', async function(e) {
    const btn = e.target.closest('[data-quantity-minus]');
    if (!btn) return;
    
    e.preventDefault();
    e.stopPropagation();

    const key = btn.getAttribute('data-quantity-minus');
    const item = btn.closest('.cart-drawer__item');
    const valueEl = item.querySelector('.cart-drawer__qty-value');
    let quantity = parseInt(valueEl.textContent);

    if (quantity > 1) {
      quantity--;
      valueEl.textContent = quantity;
      await updateCartItem(key, quantity);
    }
  });

  // Quantity plus buttons
  drawer.addEventListener('click', async function(e) {
    const btn = e.target.closest('[data-quantity-plus]');
    if (!btn) return;
    
    e.preventDefault();
    e.stopPropagation();

    const key = btn.getAttribute('data-quantity-plus');
    const item = btn.closest('.cart-drawer__item');
    const valueEl = item.querySelector('.cart-drawer__qty-value');
    let quantity = parseInt(valueEl.textContent);

    quantity++;
    valueEl.textContent = quantity;
    await updateCartItem(key, quantity);
  });

  // Remove item
  drawer.addEventListener('click', async function(e) {
    const btn = e.target.closest('[data-cart-item-remove]');
    if (!btn) return;
    
    e.preventDefault();
    e.stopPropagation();

    const key = btn.getAttribute('data-cart-item-remove');
    await updateCartItem(key, 0);
  });

  // Update cart item
  async function updateCartItem(key, quantity) {
    try {
      const response = await fetch('/cart/change.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id: key, quantity: quantity })
      });

      if (response.ok) {
        await refreshDrawer();
        document.dispatchEvent(new CustomEvent('cart:updated'));
      }
    } catch (error) {
      console.error('Error updating cart:', error);
    }
  }

  // Refresh drawer content
  async function refreshDrawer() {
    try {
      const response = await fetch('/?section_id=cart-drawer');
      const html = await response.text();
      
      const parser = new DOMParser();
      const doc = parser.parseFromString(html, 'text/html');
      
      const newContent = doc.querySelector('[data-cart-drawer-content]');
      const currentContent = drawer.querySelector('[data-cart-drawer-content]');
      
      if (newContent && currentContent) {
        currentContent.innerHTML = newContent.innerHTML;
      }

      // Update footer
      const newFooter = doc.querySelector('.cart-drawer__footer');
      const currentFooter = drawer.querySelector('.cart-drawer__footer');
      if (newFooter && currentFooter) {
        currentFooter.outerHTML = newFooter.outerHTML;
        // Re-initialize discount section after footer refresh
        initDiscountSection();
      } else if (newFooter && !currentFooter) {
        drawer.querySelector('.cart-drawer__inner').appendChild(newFooter.cloneNode(true));
        initDiscountSection();
      } else if (!newFooter && currentFooter) {
        currentFooter.remove();
      }

      // Update cart count in header
      const cartData = await fetch('/cart.js').then(r => r.json());
      document.querySelectorAll('[data-cart-count]').forEach(el => {
        el.textContent = cartData.item_count;
        if (el.classList.contains('is-hidden') && cartData.item_count > 0) {
          el.classList.remove('is-hidden');
        } else if (cartData.item_count === 0) {
          el.classList.add('is-hidden');
        }
      });

      updateShippingProgress();

    } catch (error) {
      console.error('Error refreshing cart:', error);
    }
  }

  // Listen for cart updates from product pages
  document.addEventListener('cart:updated', () => {
    if (drawer.classList.contains('is-active')) {
      refreshDrawer();
    }
  });

  // Open drawer after add to cart
  document.addEventListener('cart:item-added', () => {
    openCartDrawer();
  });
});
</script>

