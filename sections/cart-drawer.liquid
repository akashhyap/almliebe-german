    justify-content: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .cart-drawer__payment-icon {
    height: 24px;
    width: auto;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const drawer = document.querySelector('[data-cart-drawer]');
  if (!drawer) return;

  const closeTriggers = drawer.querySelectorAll('[data-cart-drawer-close]');
  const cartTriggers = document.querySelectorAll('[data-cart-trigger]');

  // Open drawer
  function openDrawer() {
    drawer.classList.add('is-active');
    drawer.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';
  }

  // Close drawer
  function closeDrawer() {
    drawer.classList.remove('is-active');
    drawer.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
  }

  // Trigger from header cart icon
  cartTriggers.forEach(trigger => {
    trigger.addEventListener('click', (e) => {
      e.preventDefault();
      openDrawer();
    });
  });

  // Close triggers
  closeTriggers.forEach(trigger => {
    trigger.addEventListener('click', closeDrawer);
  });

  // Close on escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && drawer.classList.contains('is-active')) {
      closeDrawer();
    }
  });

  // Quantity buttons
  drawer.addEventListener('click', async (e) => {
    const btn = e.target.closest('[data-quantity-change]');
    if (!btn) return;

    const line = btn.dataset.quantityChange;
    const action = btn.dataset.action;
    const input = drawer.querySelector(`[data-cart-item-quantity="${line}"]`);
    let quantity = parseInt(input.value);

    if (action === 'minus' && quantity > 1) {
      quantity--;
    } else if (action === 'plus') {
      quantity++;
    }

    input.value = quantity;
    await updateCartItem(line, quantity);
  });

  // Quantity input change
  drawer.addEventListener('change', async (e) => {
    if (!e.target.matches('[data-cart-item-quantity]')) return;
    
    const line = e.target.dataset.cartItemQuantity;
    const quantity = parseInt(e.target.value);
    
    if (quantity >= 1) {
      await updateCartItem(line, quantity);
    }
  });

  // Remove item
  drawer.addEventListener('click', async (e) => {
    const btn = e.target.closest('[data-cart-item-remove]');
    if (!btn) return;

    const line = btn.dataset.cartItemRemove;
    await updateCartItem(line, 0);
  });

  // Cart note
  const noteInput = drawer.querySelector('[data-cart-note]');
  let noteTimeout;
  noteInput?.addEventListener('input', () => {
    clearTimeout(noteTimeout);
    noteTimeout = setTimeout(async () => {
      await fetch('/cart/update.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ note: noteInput.value })
      });
    }, 500);
  });

  // Update cart item
  async function updateCartItem(line, quantity) {
    try {
      const response = await fetch('/cart/change.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ line: parseInt(line), quantity })
      });

      if (response.ok) {
        await refreshDrawer();
        document.dispatchEvent(new CustomEvent('cart:updated'));
      }
    } catch (error) {
      console.error('Error updating cart:', error);
    }
  }

  // Refresh drawer content
  async function refreshDrawer() {
    try {
      const response = await fetch('/?section_id=cart-drawer');
      const html = await response.text();
      
      const parser = new DOMParser();
      const doc = parser.parseFromString(html, 'text/html');
      
      const newContent = doc.querySelector('[data-cart-drawer-content]');
      const currentContent = drawer.querySelector('[data-cart-drawer-content]');
      
      if (newContent && currentContent) {
        currentContent.innerHTML = newContent.innerHTML;
      }

      // Update cart count in header
      const newCount = doc.querySelector('[data-cart-count]');
      document.querySelectorAll('[data-cart-count]').forEach(el => {
        el.textContent = newCount?.textContent || '(0)';
      });

      // Update subtotal
      const newSubtotal = doc.querySelector('[data-cart-subtotal]');
      const currentSubtotal = drawer.querySelector('[data-cart-subtotal]');
      if (newSubtotal && currentSubtotal) {
        currentSubtotal.textContent = newSubtotal.textContent;
      }

      // Update free shipping bar
      const freeShippingBar = doc.querySelector('[data-free-shipping-bar]');
      const currentBar = drawer.querySelector('[data-free-shipping-bar]');
      if (freeShippingBar && currentBar) {
        currentBar.outerHTML = freeShippingBar.outerHTML;
      }

    } catch (error) {
      console.error('Error refreshing cart:', error);
    }
  }

  // Listen for cart updates from product pages
  document.addEventListener('cart:updated', () => {
    if (drawer.classList.contains('is-active')) {
      refreshDrawer();
    }
  });

  // Open drawer after add to cart (if configured)
  document.addEventListener('cart:item-added', () => {
    if (window.almliebe?.settings?.cartType === 'drawer') {
      openDrawer();
    }
  });
});
