{% comment %}
  NEW ARRIVALS / FEATURED PRODUCTS SECTION
  Gymshark-style product carousel with manual product selection
  
  Features:
  - Manually add products via blocks
  - Subtitle and title customizable
  - View All link
  - Grid display (up to 5 products)
  - Carousel when more than 5 products
  - Optional vendor display above title (light gray)
  - Left-aligned product info
{% endcomment %}

{%- liquid
  assign subtitle = section.settings.subtitle
  assign custom_title = section.settings.title
  assign show_view_all = section.settings.show_view_all
  assign view_all_link = section.settings.view_all_link
  assign view_all_text = section.settings.view_all_text | default: 'Alle ansehen'
  assign show_vendor = section.settings.show_vendor
  assign products_count = section.blocks.size
  
  assign enable_carousel = false
  if products_count > 5
    assign enable_carousel = true
  endif
-%}

{%- if products_count > 0 -%}
  <section class="new-arrivals-section{% if enable_carousel %} has-carousel{% endif %}" data-new-arrivals-section>
    <div class="new-arrivals-section__container">
      
      {%- comment -%} Header {%- endcomment -%}
      <div class="new-arrivals-section__header">
        <div class="new-arrivals-section__titles">
          {%- if subtitle != blank -%}
            <p class="new-arrivals-section__subtitle">{{ subtitle }}</p>
          {%- endif -%}
          {%- if custom_title != blank -%}
            <h2 class="new-arrivals-section__title">{{ custom_title }}</h2>
          {%- endif -%}
          {%- if show_view_all and view_all_link != blank -%}
            <a href="{{ view_all_link }}" class="new-arrivals-section__view-all">
              {{ view_all_text }}
            </a>
          {%- endif -%}
        </div>
        
        {%- comment -%} Navigation Arrows (only for carousel) {%- endcomment -%}
        {%- if enable_carousel -%}
          <div class="new-arrivals-section__nav">
            <button type="button" class="new-arrivals-section__nav-btn new-arrivals-section__nav-btn--prev" data-slider-prev aria-label="Previous" disabled>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="15 18 9 12 15 6"/>
              </svg>
            </button>
            <button type="button" class="new-arrivals-section__nav-btn new-arrivals-section__nav-btn--next" data-slider-next aria-label="Next">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9 18 15 12 9 6"/>
              </svg>
            </button>
          </div>
        {%- endif -%}
      </div>
      
      {%- comment -%} Product Grid / Slider {%- endcomment -%}
      <div class="new-arrivals-section__slider" data-slider>
        <div class="new-arrivals-section__track{% unless enable_carousel %} new-arrivals-section__track--grid{% endunless %}" data-slider-track>
          {%- for block in section.blocks -%}
            {%- assign product = block.settings.product -%}
            {%- if product != blank -%}
              <div class="new-arrivals-section__item" {{ block.shopify_attributes }}>
                <div class="na-product-card">
                  {%- comment -%} Image Container {%- endcomment -%}
                  <a href="{{ product.url }}" class="na-product-card__image-link">
                    <div class="na-product-card__image">
                      {%- if product.featured_media -%}
                        <img 
                          src="{{ product.featured_media | image_url: width: 600 }}"
                          alt="{{ product.title | escape }}"
                          width="300"
                          height="400"
                          loading="lazy"
                        >
                        {%- if product.media.size > 1 -%}
                          <img 
                            class="na-product-card__image-hover"
                            src="{{ product.media[1] | image_url: width: 600 }}"
                            alt="{{ product.title | escape }}"
                            width="300"
                            height="400"
                            loading="lazy"
                          >
                        {%- endif -%}
                      {%- else -%}
                        <div class="na-product-card__placeholder">
                          {{ 'product-1' | placeholder_svg_tag }}
                        </div>
                      {%- endif -%}
                      
                      {%- comment -%} Badges {%- endcomment -%}
                      <div class="na-product-card__badges">
                        {%- if product.available == false -%}
                          <span class="na-product-card__badge na-product-card__badge--soldout">Ausverkauft</span>
                        {%- else -%}
                          {%- assign total_inventory = 0 -%}
                          {%- for variant in product.variants -%}
                            {%- if variant.inventory_management and variant.inventory_quantity > 0 -%}
                              {%- assign total_inventory = total_inventory | plus: variant.inventory_quantity -%}
                            {%- endif -%}
                          {%- endfor -%}
                          {%- if total_inventory > 0 and total_inventory <= 5 -%}
                            <span class="na-product-card__badge na-product-card__badge--low">Nur noch wenige</span>
                          {%- endif -%}
                        {%- endif -%}
                        
                        {%- if product.compare_at_price > product.price -%}
                          {%- assign discount = product.compare_at_price | minus: product.price | times: 100.0 | divided_by: product.compare_at_price | round -%}
                          <span class="na-product-card__badge na-product-card__badge--sale">-{{ discount }}%</span>
                        {%- endif -%}
                      </div>
                      
                      {%- comment -%} Wishlist Button {%- endcomment -%}
                      <button 
                        type="button" 
                        class="na-product-card__wishlist"
                        data-wishlist-toggle="{{ product.id }}"
                        data-product-handle="{{ product.handle }}"
                        data-product-title="{{ product.title | escape }}"
                        data-product-image="{{ product.featured_image | image_url: width: 400 }}"
                        data-product-price="{{ product.price | money }}"
                        data-product-url="{{ product.url }}"
                        aria-label="Zur Wunschliste hinzufÃ¼gen"
                      >
                        <svg class="icon-heart" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                          <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                        </svg>
                      </button>
                    </div>
                  </a>
                  
                  {%- comment -%} Product Info - LEFT ALIGNED {%- endcomment -%}
                  <div class="na-product-card__info">
                    {%- if show_vendor and product.vendor != blank -%}
                      <p class="na-product-card__vendor">{{ product.vendor }}</p>
                    {%- endif -%}
                    
                    <a href="{{ product.url }}" class="na-product-card__title">
                      {{ product.title }}
                    </a>
                    
                    <div class="na-product-card__price">
                      {%- if product.compare_at_price > product.price -%}
                        <span class="na-product-card__price-sale">{{ product.price | money }}</span>
                        <span class="na-product-card__price-compare">{{ product.compare_at_price | money }}</span>
                      {%- else -%}
                        <span class="na-product-card__price-regular">{{ product.price | money }}</span>
                      {%- endif -%}
                    </div>
                    
                    <p class="na-product-card__tax">inkl. MwSt.</p>
                  </div>
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
      
    </div>
  </section>
{%- endif -%}

<style>
  .new-arrivals-section {
    padding: 3rem 0;
  }
  
  @media (min-width: 768px) {
    .new-arrivals-section {
      padding: 4rem 0;
    }
  }
  
  .new-arrivals-section__container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  @media (min-width: 768px) {
    .new-arrivals-section__container {
      padding: 0 2rem;
    }
  }
  
  /* Header */
  .new-arrivals-section__header {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    margin-bottom: 1.5rem;
    gap: 1rem;
  }
  
  .new-arrivals-section__titles {
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
    gap: 0.5rem 1.5rem;
  }
  
  .new-arrivals-section__subtitle {
    width: 100%;
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #4b5563;
    margin: 0;
  }
  
  .new-arrivals-section__title {
    font-size: 1.5rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: -0.5px;
    color: #111827;
    margin: 0;
  }
  
  @media (min-width: 768px) {
    .new-arrivals-section__title {
      font-size: 1.8rem;
    }
  }
  
  .new-arrivals-section__view-all {
    font-size: 0.9375rem;
    font-weight: 500;
    color: #111827;
    text-decoration: underline;
    text-underline-offset: 3px;
  }
  
  .new-arrivals-section__view-all:hover {
    color: #000;
  }
  
  /* Navigation */
  .new-arrivals-section__nav {
    display: none;
    gap: 0.5rem;
  }
  
  @media (min-width: 768px) {
    .new-arrivals-section__nav {
      display: flex;
    }
  }
  
  .new-arrivals-section__nav-btn {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.2s;
  }
  
  .new-arrivals-section__nav-btn:hover:not(:disabled) {
    background: #111827;
    border-color: #111827;
    color: #ffffff;
  }
  
  .new-arrivals-section__nav-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }
  
  .new-arrivals-section__nav-btn svg {
    stroke: currentColor;
  }
  
  /* Slider Container */
  .new-arrivals-section__slider {
    overflow: hidden;
    margin: 0 -1rem;
    padding: 0 1rem;
  }
  
  @media (min-width: 768px) {
    .new-arrivals-section__slider {
      margin: 0;
      padding: 0;
    }
  }
  
  /* Track - Carousel Mode */
  .new-arrivals-section__track {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    scroll-snap-type: x mandatory;
  }
  
  .new-arrivals-section__track::-webkit-scrollbar {
    display: none;
  }
  
  /* Track - Grid Mode (5 or fewer items) */
  .new-arrivals-section__track--grid {
    overflow-x: visible;
    scroll-snap-type: none;
  }
  
  @media (min-width: 768px) {
    .new-arrivals-section__track--grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }
  }
  
  @media (min-width: 1024px) {
    .new-arrivals-section__track--grid {
      grid-template-columns: repeat(5, 1fr);
    }
  }
  
  /* Grid Item - Carousel Mode */
  .new-arrivals-section__item {
    flex: 0 0 calc(50% - 0.5rem);
    scroll-snap-align: start;
    min-width: 0;
  }
  
  @media (min-width: 640px) {
    .new-arrivals-section__item {
      flex: 0 0 calc(33.333% - 0.667rem);
    }
  }
  
  @media (min-width: 900px) {
    .new-arrivals-section__item {
      flex: 0 0 calc(25% - 0.75rem);
    }
  }
  
  @media (min-width: 1200px) {
    .new-arrivals-section__item {
      flex: 0 0 calc(20% - 0.8rem);
    }
  }
  
  /* Grid mode - items fill evenly */
  .new-arrivals-section__track--grid .new-arrivals-section__item {
    flex: 1;
  }
  
  @media (min-width: 768px) {
    .new-arrivals-section__track--grid .new-arrivals-section__item {
      flex: none;
    }
  }
  
  /* ========== PRODUCT CARD ========== */
  .na-product-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .na-product-card__image-link {
    display: block;
    text-decoration: none;
  }
  
  .na-product-card__image {
    position: relative;
    aspect-ratio: 3 / 4;
    overflow: hidden;
    background: #f3f4f6;
  }
  
  .na-product-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }
  
  .na-product-card__image-hover {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }
  
  .na-product-card:hover .na-product-card__image-hover {
    opacity: 1;
  }
  
  .na-product-card:hover .na-product-card__image > img:first-child {
    opacity: 0;
  }
  
  .na-product-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .na-product-card__placeholder svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }
  
  /* Badges */
  .na-product-card__badges {
    position: absolute;
    bottom: 0.75rem;
    left: 0.75rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }
  
  .na-product-card__badge {
    padding: 0.5rem 0.75rem;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .na-product-card__badge--sale {
    background: #dc2626;
    color: #ffffff;
  }
  
  .na-product-card__badge--soldout {
    background: #6b7280;
    color: #ffffff;
  }
  
  .na-product-card__badge--low {
    background: #ffffff;
    color: #111827;
    border: 1px solid #e5e7eb;
  }
  
  /* Wishlist */
  .na-product-card__wishlist {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.2s;
  }
  
  .na-product-card__wishlist:hover {
    background: #ffffff;
    transform: scale(1.1);
  }
  
  .na-product-card__wishlist svg {
    stroke: #111827;
    fill: none;
    transition: fill 0.2s;
  }
  
  .na-product-card__wishlist.is-active svg {
    fill: #111827;
  }
  
  /* Product Info - LEFT ALIGNED */
  .na-product-card__info {
    padding: 0.75rem 0 0;
    text-align: left;
  }
  
  .na-product-card__vendor {
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #9ca3af;
    margin: 0 0 0.25rem;
  }
  
  .na-product-card__title {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    color: #111827;
    text-decoration: none;
    margin-bottom: 0.375rem;
    line-height: 1.4;
  }
  
  .na-product-card__title:hover {
    text-decoration: underline;
  }
  
  .na-product-card__price {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }
  
  .na-product-card__price-regular {
    color: #111827;
  }
  
  .na-product-card__price-sale {
    color: #dc2626;
  }
  
  .na-product-card__price-compare {
    color: #9ca3af;
    text-decoration: line-through;
    font-weight: 400;
  }
  
  .na-product-card__tax {
    font-size: 0.75rem;
    color: #9ca3af;
    margin: 0;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const sections = document.querySelectorAll('[data-new-arrivals-section]');
  
  sections.forEach(section => {
    const track = section.querySelector('[data-slider-track]');
    const prevBtn = section.querySelector('[data-slider-prev]');
    const nextBtn = section.querySelector('[data-slider-next]');
    
    // Only initialize slider if carousel is enabled (has nav buttons)
    if (!track || !prevBtn || !nextBtn) return;
    
    const updateButtons = () => {
      const scrollLeft = track.scrollLeft;
      const maxScroll = track.scrollWidth - track.clientWidth;
      
      prevBtn.disabled = scrollLeft <= 10;
      nextBtn.disabled = scrollLeft >= maxScroll - 10;
    };
    
    const getSlideWidth = () => {
      const slide = track.querySelector('.new-arrivals-section__item');
      if (!slide) return 300;
      const style = getComputedStyle(track);
      const gap = parseFloat(style.gap) || 16;
      return slide.offsetWidth + gap;
    };
    
    prevBtn.addEventListener('click', () => {
      track.scrollBy({ left: -getSlideWidth() * 2, behavior: 'smooth' });
    });
    
    nextBtn.addEventListener('click', () => {
      track.scrollBy({ left: getSlideWidth() * 2, behavior: 'smooth' });
    });
    
    track.addEventListener('scroll', updateButtons);
    window.addEventListener('resize', updateButtons);
    
    // Initial state
    setTimeout(updateButtons, 100);
    
    // Initialize wishlist states if function exists
    if (typeof window.updateWishlistUI === 'function') {
      window.updateWishlistUI();
    }
  });
});
</script>

