{% comment %}
  ABOUT GALLERY SECTION
  Masonry grid image gallery
  Admin can add as many images as they want
{% endcomment %}

<section class="about-gallery" style="background-color: {{ section.settings.background_color }};">
  <div class="about-gallery__container">
    
    {%- if section.settings.subtitle != blank or section.settings.title != blank -%}
      <div class="about-gallery__header">
        {%- if section.settings.subtitle != blank -%}
          <p class="about-gallery__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
        
        {%- if section.settings.title != blank -%}
          <h2 class="about-gallery__title">{{ section.settings.title }}</h2>
        {%- endif -%}
      </div>
    {%- endif -%}
    
    {%- if section.blocks.size > 0 -%}
      <div class="about-gallery__masonry" data-gallery-masonry>
        {%- for block in section.blocks -%}
          {%- if block.settings.image != blank -%}
            <div class="about-gallery__item about-gallery__item--{{ block.settings.size }}" {{ block.shopify_attributes }}>
              <a href="{{ block.settings.image | image_url: width: 1600 }}" class="about-gallery__link" data-gallery-lightbox>
                <img
                  src="{{ block.settings.image | image_url: width: 800 }}"
                  alt="{{ block.settings.image.alt | default: block.settings.caption | escape }}"
                  width="400"
                  height="auto"
                  loading="lazy"
                  class="about-gallery__img"
                >
                <div class="about-gallery__overlay">
                  {%- if block.settings.caption != blank -%}
                    <p class="about-gallery__caption">{{ block.settings.caption }}</p>
                  {%- endif -%}
                  <span class="about-gallery__zoom">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="11" cy="11" r="8"></circle>
                      <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                      <line x1="11" y1="8" x2="11" y2="14"></line>
                      <line x1="8" y1="11" x2="14" y2="11"></line>
                    </svg>
                  </span>
                </div>
              </a>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
    
  </div>
</section>

{%- comment -%} Lightbox {%- endcomment -%}
<div class="gallery-lightbox" data-lightbox>
  <button class="gallery-lightbox__close" data-lightbox-close aria-label="Close">
    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
  </button>
  <button class="gallery-lightbox__nav gallery-lightbox__nav--prev" data-lightbox-prev aria-label="Previous">
    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="15 18 9 12 15 6"></polyline>
    </svg>
  </button>
  <button class="gallery-lightbox__nav gallery-lightbox__nav--next" data-lightbox-next aria-label="Next">
    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="9 18 15 12 9 6"></polyline>
    </svg>
  </button>
  <div class="gallery-lightbox__content">
    <img src="" alt="" class="gallery-lightbox__img" data-lightbox-img>
  </div>
</div>

<style>
  .about-gallery {
    padding: 3rem 0;
  }
  
  @media (min-width: 768px) {
    .about-gallery {
      padding: 4rem 0;
    }
  }
  
  .about-gallery__container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  @media (min-width: 768px) {
    .about-gallery__container {
      padding: 0 2rem;
    }
  }
  
  /* Header */
  .about-gallery__header {
    text-align: center;
    margin-bottom: 2rem;
  }
  
  @media (min-width: 768px) {
    .about-gallery__header {
      margin-bottom: 2.5rem;
    }
  }
  
  .about-gallery__subtitle {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #6b7280;
    margin: 0 0 0.5rem;
  }
  
  .about-gallery__title {
    font-size: 1.75rem;
    font-weight: 600;
    color: #111827;
    margin: 0;
  }
  
  @media (min-width: 768px) {
    .about-gallery__title {
      font-size: 2rem;
    }
  }
  
  /* Masonry Grid */
  .about-gallery__masonry {
    columns: 2;
    column-gap: 0.75rem;
  }
  
  @media (min-width: 640px) {
    .about-gallery__masonry {
      columns: 3;
      column-gap: 1rem;
    }
  }
  
  @media (min-width: 1024px) {
    .about-gallery__masonry {
      columns: 4;
      column-gap: 1rem;
    }
  }
  
  /* Gallery Item */
  .about-gallery__item {
    break-inside: avoid;
    margin-bottom: 0.75rem;
  }
  
  @media (min-width: 640px) {
    .about-gallery__item {
      margin-bottom: 1rem;
    }
  }
  
  .about-gallery__link {
    display: block;
    position: relative;
    overflow: hidden;
  }
  
  .about-gallery__img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.5s ease;
  }
  
  .about-gallery__link:hover .about-gallery__img {
    transform: scale(1.05);
  }
  
  /* Overlay */
  .about-gallery__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: background 0.3s ease;
  }
  
  .about-gallery__link:hover .about-gallery__overlay {
    background: rgba(0, 0, 0, 0.5);
  }
  
  .about-gallery__caption {
    color: #ffffff;
    font-size: 0.875rem;
    font-weight: 500;
    text-align: center;
    padding: 0 1rem;
    margin: 0 0 0.5rem;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
  }
  
  .about-gallery__link:hover .about-gallery__caption {
    opacity: 1;
    transform: translateY(0);
  }
  
  .about-gallery__zoom {
    color: #ffffff;
    opacity: 0;
    transform: scale(0.8);
    transition: all 0.3s ease;
  }
  
  .about-gallery__link:hover .about-gallery__zoom {
    opacity: 1;
    transform: scale(1);
  }
  
  /* ========== LIGHTBOX ========== */
  .gallery-lightbox {
    position: fixed;
    inset: 0;
    z-index: 9999;
    background: rgba(0, 0, 0, 0.95);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }
  
  .gallery-lightbox.is-open {
    opacity: 1;
    visibility: visible;
  }
  
  .gallery-lightbox__close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    z-index: 10;
    background: none;
    border: none;
    color: #ffffff;
    cursor: pointer;
    padding: 0.5rem;
    transition: opacity 0.2s;
  }
  
  .gallery-lightbox__close:hover {
    opacity: 0.7;
  }
  
  .gallery-lightbox__nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    background: none;
    border: none;
    color: #ffffff;
    cursor: pointer;
    padding: 1rem;
    transition: opacity 0.2s;
  }
  
  .gallery-lightbox__nav:hover {
    opacity: 0.7;
  }
  
  .gallery-lightbox__nav--prev {
    left: 1rem;
  }
  
  .gallery-lightbox__nav--next {
    right: 1rem;
  }
  
  .gallery-lightbox__content {
    max-width: 90vw;
    max-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .gallery-lightbox__img {
    max-width: 100%;
    max-height: 90vh;
    object-fit: contain;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .gallery-lightbox.is-open .gallery-lightbox__img {
    opacity: 1;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const lightbox = document.querySelector('[data-lightbox]');
  const lightboxImg = document.querySelector('[data-lightbox-img]');
  const closeBtn = document.querySelector('[data-lightbox-close]');
  const prevBtn = document.querySelector('[data-lightbox-prev]');
  const nextBtn = document.querySelector('[data-lightbox-next]');
  const galleryLinks = document.querySelectorAll('[data-gallery-lightbox]');
  
  if (!lightbox || !galleryLinks.length) return;
  
  let currentIndex = 0;
  const images = Array.from(galleryLinks).map(link => link.href);
  
  const openLightbox = (index) => {
    currentIndex = index;
    lightboxImg.src = images[currentIndex];
    lightbox.classList.add('is-open');
    document.body.style.overflow = 'hidden';
  };
  
  const closeLightbox = () => {
    lightbox.classList.remove('is-open');
    document.body.style.overflow = '';
    setTimeout(() => {
      lightboxImg.src = '';
    }, 300);
  };
  
  const showPrev = () => {
    currentIndex = (currentIndex - 1 + images.length) % images.length;
    lightboxImg.src = images[currentIndex];
  };
  
  const showNext = () => {
    currentIndex = (currentIndex + 1) % images.length;
    lightboxImg.src = images[currentIndex];
  };
  
  // Event Listeners
  galleryLinks.forEach((link, index) => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      openLightbox(index);
    });
  });
  
  closeBtn.addEventListener('click', closeLightbox);
  prevBtn.addEventListener('click', showPrev);
  nextBtn.addEventListener('click', showNext);
  
  lightbox.addEventListener('click', (e) => {
    if (e.target === lightbox) {
      closeLightbox();
    }
  });
  
  document.addEventListener('keydown', (e) => {
    if (!lightbox.classList.contains('is-open')) return;
    
    if (e.key === 'Escape') closeLightbox();
    if (e.key === 'ArrowLeft') showPrev();
    if (e.key === 'ArrowRight') showNext();
  });
});
</script>

{% schema %}
{
  "name": "About Gallery",
  "tag": "section",
  "class": "section-about-gallery",
  "settings": [
    {
      "type": "header",
      "content": "Header"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption",
          "info": "Shows on hover"
        },
        {
          "type": "select",
          "id": "size",
          "label": "Size",
          "options": [
            { "value": "small", "label": "Small" },
            { "value": "medium", "label": "Medium" },
            { "value": "large", "label": "Large" }
          ],
          "default": "medium",
          "info": "Affects how the image spans in the masonry grid"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Gallery",
      "blocks": []
    }
  ]
}
{% endschema %}
