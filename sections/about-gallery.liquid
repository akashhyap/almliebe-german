{% comment %}
  ABOUT GALLERY SECTION
  True Masonry grid with JavaScript (Pinterest-style, left-to-right order)
  Admin can add as many images as they want
{% endcomment %}

<section class="about-gallery" style="background-color: {{ section.settings.background_color }};">
  <div class="about-gallery__container">
    
    {%- if section.settings.subtitle != blank or section.settings.title != blank -%}
      <div class="about-gallery__header">
        {%- if section.settings.subtitle != blank -%}
          <p class="about-gallery__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
        
        {%- if section.settings.title != blank -%}
          <h2 class="about-gallery__title">{{ section.settings.title }}</h2>
        {%- endif -%}
      </div>
    {%- endif -%}
    
    {%- if section.blocks.size > 0 -%}
      <div class="masonry-grid" 
           data-masonry-grid
           data-columns-mobile="2"
           data-columns-tablet="3"
           data-columns-desktop="{{ section.settings.columns_desktop }}"
           data-gap="{{ section.settings.gap }}">
        {%- for block in section.blocks -%}
          {%- if block.settings.image != blank -%}
            {%- assign item_size = block.settings.size | default: 'normal' -%}
            <div class="masonry-grid__item masonry-grid__item--{{ item_size }}" data-masonry-item data-size="{{ item_size }}" {{ block.shopify_attributes }}>
              <a href="{{ block.settings.image | image_url: width: 1600 }}" class="masonry-grid__link" data-gallery-lightbox>
                <img
                  src="{{ block.settings.image | image_url: width: 800 }}"
                  alt="{{ block.settings.image.alt | default: block.settings.caption | escape }}"
                  loading="lazy"
                  class="masonry-grid__img"
                >
                <div class="masonry-grid__overlay">
                  {%- if block.settings.caption != blank -%}
                    <span class="masonry-grid__caption">{{ block.settings.caption }}</span>
                  {%- endif -%}
                  <span class="masonry-grid__zoom">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="11" cy="11" r="8"></circle>
                      <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                      <line x1="11" y1="8" x2="11" y2="14"></line>
                      <line x1="8" y1="11" x2="14" y2="11"></line>
                    </svg>
                  </span>
                </div>
              </a>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
    
  </div>
</section>

{%- comment -%} Lightbox {%- endcomment -%}
<div class="gallery-lightbox" data-lightbox>
  <button class="gallery-lightbox__close" data-lightbox-close aria-label="Close">
    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
  </button>
  <button class="gallery-lightbox__nav gallery-lightbox__nav--prev" data-lightbox-prev aria-label="Previous">
    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="15 18 9 12 15 6"></polyline>
    </svg>
  </button>
  <button class="gallery-lightbox__nav gallery-lightbox__nav--next" data-lightbox-next aria-label="Next">
    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="9 18 15 12 9 6"></polyline>
    </svg>
  </button>
  <div class="gallery-lightbox__content">
    <img src="" alt="" class="gallery-lightbox__img" data-lightbox-img>
  </div>
</div>

<style>
  .about-gallery {
    padding: 3rem 0;
  }
  
  @media (min-width: 768px) {
    .about-gallery {
      padding: 4rem 0;
    }
  }
  
  .about-gallery__container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  @media (min-width: 768px) {
    .about-gallery__container {
      padding: 0 2rem;
    }
  }
  
  /* Header */
  .about-gallery__header {
    text-align: center;
    margin-bottom: 2rem;
  }
  
  @media (min-width: 768px) {
    .about-gallery__header {
      margin-bottom: 2.5rem;
    }
  }
  
  .about-gallery__subtitle {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #6b7280;
    margin: 0 0 0.5rem;
  }
  
  .about-gallery__title {
    font-size: 1.75rem;
    font-weight: 600;
    color: #111827;
    margin: 0;
  }
  
  @media (min-width: 768px) {
    .about-gallery__title {
      font-size: 2rem;
    }
  }
  
  /* ========== MASONRY GRID ========== */
  .masonry-grid {
    position: relative;
    width: 100%;
    min-height: 200px;
  }
  
  .masonry-grid__item {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    transition: opacity 0.4s ease, transform 0.4s ease;
  }
  
  .masonry-grid__item.is-positioned {
    opacity: 1;
  }
  
  .masonry-grid__link {
    display: block;
    position: relative;
    overflow: hidden;
  }
  
  .masonry-grid__img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  /* Size Variations - Creates masonry effect */
  .masonry-grid__item--normal .masonry-grid__link {
    aspect-ratio: 1 / 1;
  }
  
  .masonry-grid__item--tall .masonry-grid__link {
    aspect-ratio: 3 / 4;
  }
  
  .masonry-grid__item--short .masonry-grid__link {
    aspect-ratio: 4 / 3;
  }
  
  .masonry-grid__item--wide .masonry-grid__link {
    aspect-ratio: 16 / 9;
  }
  
  .masonry-grid__item--portrait .masonry-grid__link {
    aspect-ratio: 2 / 3;
  }
  
  .masonry-grid__link:hover .masonry-grid__img {
    transform: scale(1.05);
  }
  
  /* Overlay */
  .masonry-grid__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: background 0.3s ease;
  }
  
  .masonry-grid__link:hover .masonry-grid__overlay {
    background: rgba(0, 0, 0, 0.5);
  }
  
  .masonry-grid__caption {
    color: #ffffff;
    font-size: 0.875rem;
    font-weight: 500;
    text-align: center;
    padding: 0 1rem;
    margin: 0 0 0.5rem;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
  }
  
  .masonry-grid__link:hover .masonry-grid__caption {
    opacity: 1;
    transform: translateY(0);
  }
  
  .masonry-grid__zoom {
    color: #ffffff;
    opacity: 0;
    transform: scale(0.8);
    transition: all 0.3s ease;
  }
  
  .masonry-grid__link:hover .masonry-grid__zoom {
    opacity: 1;
    transform: scale(1);
  }
  
  /* ========== LIGHTBOX ========== */
  .gallery-lightbox {
    position: fixed;
    inset: 0;
    z-index: 9999;
    background: rgba(0, 0, 0, 0.95);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }
  
  .gallery-lightbox.is-open {
    opacity: 1;
    visibility: visible;
  }
  
  .gallery-lightbox__close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    z-index: 10;
    background: none;
    border: none;
    color: #ffffff;
    cursor: pointer;
    padding: 0.5rem;
    transition: opacity 0.2s;
  }
  
  .gallery-lightbox__close:hover {
    opacity: 0.7;
  }
  
  .gallery-lightbox__nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    background: none;
    border: none;
    color: #ffffff;
    cursor: pointer;
    padding: 1rem;
    transition: opacity 0.2s;
  }
  
  .gallery-lightbox__nav:hover {
    opacity: 0.7;
  }
  
  .gallery-lightbox__nav--prev {
    left: 1rem;
  }
  
  .gallery-lightbox__nav--next {
    right: 1rem;
  }
  
  .gallery-lightbox__content {
    max-width: 90vw;
    max-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .gallery-lightbox__img {
    max-width: 100%;
    max-height: 90vh;
    object-fit: contain;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .gallery-lightbox.is-open .gallery-lightbox__img {
    opacity: 1;
  }
</style>

<script>
(function() {
  // Masonry Layout Engine - Left to Right Order
  function initMasonry() {
    const grid = document.querySelector('[data-masonry-grid]');
    if (!grid) return;
    
    const items = Array.from(grid.querySelectorAll('[data-masonry-item]'));
    if (!items.length) return;
    
    const gap = parseInt(grid.dataset.gap) || 12;
    const colsMobile = parseInt(grid.dataset.columnsMobile) || 2;
    const colsTablet = parseInt(grid.dataset.columnsTablet) || 3;
    const colsDesktop = parseInt(grid.dataset.columnsDesktop) || 4;
    
    function getColumnCount() {
      const width = window.innerWidth;
      if (width >= 1024) return colsDesktop;
      if (width >= 640) return colsTablet;
      return colsMobile;
    }
    
    function layout() {
      const columnCount = getColumnCount();
      const gridWidth = grid.offsetWidth;
      const columnWidth = (gridWidth - (gap * (columnCount - 1))) / columnCount;
      
      // Track the height of each column
      const columnHeights = new Array(columnCount).fill(0);
      
      items.forEach((item) => {
        // Find the shortest column
        const minHeight = Math.min(...columnHeights);
        const shortestColumn = columnHeights.indexOf(minHeight);
        
        // Calculate position
        const x = shortestColumn * (columnWidth + gap);
        const y = columnHeights[shortestColumn];
        
        // Set item dimensions and position
        item.style.width = columnWidth + 'px';
        item.style.transform = `translate3d(${x}px, ${y}px, 0)`;
        item.classList.add('is-positioned');
        
        // Update column height
        const itemHeight = item.offsetHeight;
        columnHeights[shortestColumn] += itemHeight + gap;
      });
      
      // Set grid height to tallest column
      const maxHeight = Math.max(...columnHeights);
      grid.style.height = (maxHeight - gap) + 'px';
    }
    
    // Wait for images to load before initial layout
    function waitForImages(callback) {
      const images = grid.querySelectorAll('img');
      let loaded = 0;
      const total = images.length;
      
      if (total === 0) {
        callback();
        return;
      }
      
      function checkComplete() {
        loaded++;
        if (loaded >= total) {
          callback();
        }
      }
      
      images.forEach(img => {
        if (img.complete && img.naturalHeight !== 0) {
          checkComplete();
        } else {
          img.addEventListener('load', checkComplete);
          img.addEventListener('error', checkComplete);
        }
      });
      
      // Fallback - layout after 3 seconds even if images haven't loaded
      setTimeout(callback, 3000);
    }
    
    // Initial layout after images load
    waitForImages(layout);
    
    // Relayout on resize (debounced)
    let resizeTimer;
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(layout, 150);
    });
    
    // Expose for manual triggering if needed
    window.masonryLayout = layout;
  }
  
  // Lightbox
  function initLightbox() {
    const lightbox = document.querySelector('[data-lightbox]');
    const lightboxImg = document.querySelector('[data-lightbox-img]');
    const closeBtn = document.querySelector('[data-lightbox-close]');
    const prevBtn = document.querySelector('[data-lightbox-prev]');
    const nextBtn = document.querySelector('[data-lightbox-next]');
    const galleryLinks = document.querySelectorAll('[data-gallery-lightbox]');
    
    if (!lightbox || !galleryLinks.length) return;
    
    let currentIndex = 0;
    const images = Array.from(galleryLinks).map(link => link.href);
    
    function openLightbox(index) {
      currentIndex = index;
      lightboxImg.src = images[currentIndex];
      lightbox.classList.add('is-open');
      document.body.style.overflow = 'hidden';
    }
    
    function closeLightbox() {
      lightbox.classList.remove('is-open');
      document.body.style.overflow = '';
      setTimeout(() => {
        lightboxImg.src = '';
      }, 300);
    }
    
    function showPrev() {
      currentIndex = (currentIndex - 1 + images.length) % images.length;
      lightboxImg.src = images[currentIndex];
    }
    
    function showNext() {
      currentIndex = (currentIndex + 1) % images.length;
      lightboxImg.src = images[currentIndex];
    }
    
    // Event Listeners
    galleryLinks.forEach((link, index) => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        openLightbox(index);
      });
    });
    
    closeBtn.addEventListener('click', closeLightbox);
    prevBtn.addEventListener('click', showPrev);
    nextBtn.addEventListener('click', showNext);
    
    lightbox.addEventListener('click', (e) => {
      if (e.target === lightbox) {
        closeLightbox();
      }
    });
    
    document.addEventListener('keydown', (e) => {
      if (!lightbox.classList.contains('is-open')) return;
      
      if (e.key === 'Escape') closeLightbox();
      if (e.key === 'ArrowLeft') showPrev();
      if (e.key === 'ArrowRight') showNext();
    });
  }
  
  // Initialize on DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      initMasonry();
      initLightbox();
    });
  } else {
    initMasonry();
    initLightbox();
  }
})();
</script>

