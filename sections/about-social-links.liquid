{% comment %}
  ABOUT SOCIAL LINKS SECTION
  Horizontal list of social links and locations with icons
{% endcomment %}

<section class="about-social" style="background-color: {{ section.settings.background_color }};">
  <div class="about-social__container">
    
    {%- if section.settings.title != blank -%}
      <h2 class="about-social__title">{{ section.settings.title }}</h2>
    {%- endif -%}
    
    {%- if section.blocks.size > 0 -%}
      <div class="about-social__list">
        {%- for block in section.blocks -%}
          {%- assign icon_type = block.settings.icon_type -%}
          
          <div class="about-social__item" {{ block.shopify_attributes }}>
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="about-social__link" target="{{ block.settings.open_new_tab | default: false | yepnope: '_blank', '_self' }}" {% if block.settings.open_new_tab %}rel="noopener noreferrer"{% endif %}>
            {%- else -%}
              <div class="about-social__link about-social__link--no-link">
            {%- endif -%}
            
              <span class="about-social__icon">
                {%- case icon_type -%}
                  {%- when 'instagram' -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                      <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                      <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                    </svg>
                  {%- when 'facebook' -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                    </svg>
                  {%- when 'twitter' -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M4 4l11.733 16h4.267l-11.733 -16z"></path>
                      <path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"></path>
                    </svg>
                  {%- when 'youtube' -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"></path>
                      <polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"></polygon>
                    </svg>
                  {%- when 'pinterest' -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M8 12a4 4 0 1 0 8 0a4 4 0 1 0-8 0"></path>
                      <path d="M9 17l1 5"></path>
                      <path d="M12 2a10 10 0 0 1 7.38 16.75"></path>
                      <path d="M12 2a10 10 0 0 0-8.62 15"></path>
                    </svg>
                  {%- when 'tiktok' -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M9 12a4 4 0 1 0 4 4V4a5 5 0 0 0 5 5"></path>
                    </svg>
                  {%- when 'linkedin' -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                      <rect x="2" y="9" width="4" height="12"></rect>
                      <circle cx="4" cy="4" r="2"></circle>
                    </svg>
                  {%- when 'email' -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                      <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                  {%- when 'phone' -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                    </svg>
                  {%- when 'location' -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                      <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                  {%- else -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <circle cx="12" cy="12" r="10"></circle>
                      <line x1="2" y1="12" x2="22" y2="12"></line>
                      <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                    </svg>
                {%- endcase -%}
              </span>
              
              {%- if block.settings.label != blank -%}
                <span class="about-social__label">{{ block.settings.label }}</span>
              {%- endif -%}
              
              {%- if block.settings.text != blank -%}
                <span class="about-social__text">{{ block.settings.text }}</span>
              {%- endif -%}
            
            {%- if block.settings.link != blank -%}
              </a>
            {%- else -%}
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
    
  </div>
</section>

<style>
  .about-social {
    padding: 3rem 0;
  }
  
  @media (min-width: 768px) {
    .about-social {
      padding: 4rem 0;
    }
  }
  
  .about-social__container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  @media (min-width: 768px) {
    .about-social__container {
      padding: 0 2rem;
    }
  }
  
  .about-social__title {
    font-size: 1.5rem;
    font-weight: 600;
    text-align: center;
    color: #111827;
    margin: 0 0 2rem;
  }
  
  @media (min-width: 768px) {
    .about-social__title {
      font-size: 1.75rem;
      margin-bottom: 2.5rem;
    }
  }
  
  /* List */
  .about-social__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }
  
  @media (min-width: 768px) {
    .about-social__list {
      gap: 1.5rem;
    }
  }
  
  @media (min-width: 1024px) {
    .about-social__list {
      gap: 2rem;
    }
  }
  
  /* Item */
  .about-social__item {
    flex: 0 0 auto;
  }
  
  .about-social__link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    background: #f9fafb;
    border: 1px solid #e5e7eb;
    text-decoration: none;
    color: #111827;
    transition: all 0.3s ease;
  }
  
  .about-social__link:hover {
    background: #111827;
    border-color: #111827;
    color: #ffffff;
  }
  
  .about-social__link--no-link {
    cursor: default;
  }
  
  .about-social__link--no-link:hover {
    background: #f9fafb;
    border-color: #e5e7eb;
    color: #111827;
  }
  
  .about-social__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  
  .about-social__icon svg {
    width: 24px;
    height: 24px;
  }
  
  .about-social__label {
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .about-social__text {
    font-size: 0.875rem;
    color: #6b7280;
  }
  
  .about-social__link:hover .about-social__text {
    color: rgba(255, 255, 255, 0.8);
  }
  
  .about-social__link--no-link:hover .about-social__text {
    color: #6b7280;
  }
</style>

{% schema %}
{
  "name": "About Social Links",
  "tag": "section",
  "class": "section-about-social",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Folgen Sie uns"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Link",
      "settings": [
        {
          "type": "select",
          "id": "icon_type",
          "label": "Icon",
          "options": [
            { "value": "instagram", "label": "Instagram" },
            { "value": "facebook", "label": "Facebook" },
            { "value": "twitter", "label": "X (Twitter)" },
            { "value": "youtube", "label": "YouTube" },
            { "value": "pinterest", "label": "Pinterest" },
            { "value": "tiktok", "label": "TikTok" },
            { "value": "linkedin", "label": "LinkedIn" },
            { "value": "email", "label": "Email" },
            { "value": "phone", "label": "Phone" },
            { "value": "location", "label": "Location" },
            { "value": "globe", "label": "Website" }
          ],
          "default": "instagram"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "info": "Bold text (e.g., 'Instagram', 'München')"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Additional Text",
          "info": "Secondary text (e.g., '@almliebe', address)"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        },
        {
          "type": "checkbox",
          "id": "open_new_tab",
          "label": "Open in new tab",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Social Links",
      "blocks": [
        {
          "type": "link",
          "settings": {
            "icon_type": "instagram",
            "label": "Instagram",
            "text": "@almliebe"
          }
        },
        {
          "type": "link",
          "settings": {
            "icon_type": "facebook",
            "label": "Facebook",
            "text": "Almliebe"
          }
        },
        {
          "type": "link",
          "settings": {
            "icon_type": "location",
            "label": "München",
            "text": "Tal 21, 80331"
          }
        }
      ]
    }
  ]
}
{% endschema %}
