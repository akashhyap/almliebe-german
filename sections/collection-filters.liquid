<script>
document.addEventListener('DOMContentLoaded', function() {
  const filters = document.querySelector('[data-collection-filters]');
  const toggle = document.querySelector('[data-filter-toggle]');
  const close = document.querySelector('[data-filter-close]');
  const overlay = document.querySelector('[data-filter-overlay]');
  const form = document.querySelector('[data-filter-form]');
  const sortSelects = document.querySelectorAll('[data-sort-by]');

  // Toggle mobile filters
  toggle?.addEventListener('click', () => {
    filters.classList.add('is-open');
    document.body.style.overflow = 'hidden';
  });

  function closeFilters() {
    filters.classList.remove('is-open');
    document.body.style.overflow = '';
  }

  close?.addEventListener('click', closeFilters);
  overlay?.addEventListener('click', closeFilters);

  // Auto-submit on change (desktop)
  if (window.innerWidth >= 1024) {
    form?.addEventListener('change', () => {
      form.submit();
    });
  }

  // Sort change
  sortSelects.forEach(select => {
    select.addEventListener('change', function() {
      const url = new URL(window.location);
      url.searchParams.set('sort_by', this.value);
      window.location = url;
    });
  });

  // Price range slider
  const priceRange = document.querySelector('[data-price-range]');
  if (priceRange) {
    const minSlider = priceRange.querySelector('[data-slider-min]');
    const maxSlider = priceRange.querySelector('[data-slider-max]');
    const range = priceRange.querySelector('[data-slider-range]');
    const minInput = priceRange.querySelector('input[name$="gte"]');
    const maxInput = priceRange.querySelector('input[name$="lte"]');

    function updateRange() {
      const min = parseInt(minSlider.value);
      const max = parseInt(maxSlider.value);
      const total = parseInt(maxSlider.max) - parseInt(minSlider.min);
      
      const minPercent = ((min - parseInt(minSlider.min)) / total) * 100;
      const maxPercent = ((max - parseInt(minSlider.min)) / total) * 100;
      
      range.style.left = minPercent + '%';
      range.style.width = (maxPercent - minPercent) + '%';
      
      minInput.value = min;
      maxInput.value = max;
    }

    minSlider?.addEventListener('input', () => {
      if (parseInt(minSlider.value) > parseInt(maxSlider.value)) {
        minSlider.value = maxSlider.value;
      }
      updateRange();
    });

    maxSlider?.addEventListener('input', () => {
      if (parseInt(maxSlider.value) < parseInt(minSlider.value)) {
        maxSlider.value = minSlider.value;
      }
      updateRange();
    });

    // Sync inputs with sliders
    minInput?.addEventListener('change', () => {
      minSlider.value = minInput.value;
      updateRange();
    });

    maxInput?.addEventListener('change', () => {
      maxSlider.value = maxInput.value;
      updateRange();
    });

    updateRange();
  }
});
</script>

