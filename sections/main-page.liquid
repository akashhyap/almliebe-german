<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div class="container page-width-content color-{{ section.settings.color_scheme }}">
  <div
    class="
      spacing-style
      layout-panel-flex
      layout-panel-flex--column
      section-content-wrapper
      mobile-column
    "
   
  >
    {% if page.title != blank %}
      <h1 class="page-title">
        {{ page.title }}
      </h1>
    {% endif %}
    {% if page.content != blank %}
      <section class="page-content">
        {{ page.content }}
      </section>
    {% endif %}

   
  </div>
</div>
