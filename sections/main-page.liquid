{% comment %}
  Main Page Section
  Renders standard page content with configurable layout and spacing
{% endcomment %}

<main 
  class="main-page color-{{ section.settings.color_scheme }}"
  style="
    --padding-block-start: {{ section.settings.padding-block-start }}px;
    --padding-block-end: {{ section.settings.padding-block-end }}px;
    --content-gap: {{ section.settings.gap }}px;
  "
>
  <div class="container page-container page-container--{{ section.settings.content_direction }}">
    {% if page.title != blank %}
      <h1 class="page-title">
        {{ page.title }}
      </h1>
    {% endif %}
    
    {% if page.content != blank %}
      <section class="page-content rte">
        {{ page.content }}
      </section>
    {% endif %}
  </div>
</main>

{% style %}
  .main-page {
    padding-block-start: var(--padding-block-start);
    padding-block-end: var(--padding-block-end);
  }
  
  .page-container {
    display: flex;
    gap: var(--content-gap);
  }
  
  .page-container--column {
    flex-direction: column;
  }
  
  .page-container--row {
    flex-direction: row;
  }
  
  .page-title {
    margin: 0;
  }
  
  .page-content {
    flex: 1;
  }
{% endstyle %}

{% schema %}
{
  "name": "Page Content",
  "tag": "section",
  "class": "section-main-page",
  "settings": [
    {
      "type": "select",
      "id": "content_direction",
      "label": "Content Direction",
      "options": [
        { "value": "column", "label": "Column (Vertical)" },
        { "value": "row", "label": "Row (Horizontal)" }
      ],
      "default": "column"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Content Gap",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 32
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top Padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom Padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 80
    }
  ]
}
{% endschema %}
