<script>
(function() {
  'use strict';
  
  var mobileMenu = null;
  var mobileMenuOverlay = null;

  function openMobileMenu() {
    if (!mobileMenu) mobileMenu = document.querySelector('[data-mobile-menu]');
    if (!mobileMenuOverlay) mobileMenuOverlay = document.querySelector('[data-mobile-menu-overlay]');
    
    if (mobileMenu) mobileMenu.classList.add('is-active');
    if (mobileMenuOverlay) mobileMenuOverlay.classList.add('is-active');
    document.body.style.overflow = 'hidden';
    document.body.classList.add('mobile-menu-open');
  }

  function closeMobileMenu() {
    if (!mobileMenu) mobileMenu = document.querySelector('[data-mobile-menu]');
    if (!mobileMenuOverlay) mobileMenuOverlay = document.querySelector('[data-mobile-menu-overlay]');
    
    if (mobileMenu) mobileMenu.classList.remove('is-active');
    if (mobileMenuOverlay) mobileMenuOverlay.classList.remove('is-active');
    document.body.style.overflow = '';
    document.body.classList.remove('mobile-menu-open');
    
    document.querySelectorAll('.mobile-submenu.is-active').forEach(function(submenu) {
      submenu.classList.remove('is-active');
    });
  }

  window.openMobileMenu = openMobileMenu;
  window.closeMobileMenu = closeMobileMenu;

  // Click handler - CAPTURE PHASE to run before any other scripts
  document.addEventListener('click', function(e) {
    var toggleBtn = e.target.closest('[data-mobile-menu-toggle]');
    if (toggleBtn) {
      e.preventDefault();
      e.stopPropagation();
      e.stopImmediatePropagation();
      
      if (!mobileMenu) mobileMenu = document.querySelector('[data-mobile-menu]');
      
      if (mobileMenu && mobileMenu.classList.contains('is-active')) {
        closeMobileMenu();
      } else {
        openMobileMenu();
      }
      return;
    }
    
    if (e.target.closest('[data-mobile-menu-overlay]')) {
      e.preventDefault();
      closeMobileMenu();
    }
  }, true);

  document.addEventListener('DOMContentLoaded', function() {
    var header = document.querySelector('[data-header]');
    var notificationBar = document.querySelector('.notification-bar, [data-notification-bar], .announcement-bar');
    
    mobileMenu = document.querySelector('[data-mobile-menu]');
    mobileMenuOverlay = document.querySelector('[data-mobile-menu-overlay]');
    
    function updateNotificationBarHeight() {
      var height = notificationBar ? notificationBar.offsetHeight : 0;
      document.documentElement.style.setProperty('--notification-bar-height', height + 'px');
    }
    
    updateNotificationBarHeight();
    window.addEventListener('resize', updateNotificationBarHeight);
    
    if (document.fonts && document.fonts.ready) {
      document.fonts.ready.then(updateNotificationBarHeight);
    }
    
    if (header) {
      var ticking = false;
      
      function handleScroll() {
        var notificationHeight = notificationBar ? notificationBar.offsetHeight : 0;
        if (window.scrollY > notificationHeight) {
          header.classList.add('is-scrolled');
        } else {
          header.classList.remove('is-scrolled');
        }
        ticking = false;
      }
      
      window.addEventListener('scroll', function() {
        if (!ticking) {
          window.requestAnimationFrame(handleScroll);
          ticking = true;
        }
      }, { passive: true });
      
      handleScroll();
    }

    // Mega menu and dropdown handling
    var megaMenuItems = document.querySelectorAll('.nav-item--has-megamenu');
    var megaMenuOverlay = document.querySelector('[data-mega-menu-overlay]');
    var OPEN_DELAY = 80;
    var CLOSE_DELAY = 150;
    var openTimeout = null;
    var closeTimeout = null;
    var currentOpenMenu = null;
    
    // Add class for dropdown items (fallback for browsers without :has() support)
    megaMenuItems.forEach(function(item) {
      if (item.querySelector('.dropdown-menu')) {
        item.classList.add('nav-item--has-dropdown');
      }
    });
    
    function hasMegaMenu(item) {
      return item.querySelector('.mega-menu') !== null;
    }
    
    function openMegaMenu(item) {
      clearTimeout(closeTimeout);
      clearTimeout(openTimeout);
      if (currentOpenMenu && currentOpenMenu !== item) {
        currentOpenMenu.classList.remove('is-open');
      }
      openTimeout = setTimeout(function() {
        item.classList.add('is-open');
        // Only show overlay for actual mega menus, not simple dropdowns
        if (megaMenuOverlay && hasMegaMenu(item)) {
          megaMenuOverlay.classList.add('is-visible');
        }
        currentOpenMenu = item;
      }, OPEN_DELAY);
    }
    
    function closeMegaMenu(item) {
      clearTimeout(openTimeout);
      clearTimeout(closeTimeout);
      closeTimeout = setTimeout(function() {
        item.classList.remove('is-open');
        if (megaMenuOverlay) megaMenuOverlay.classList.remove('is-visible');
        if (currentOpenMenu === item) currentOpenMenu = null;
      }, CLOSE_DELAY);
    }
    
    function closeAllMegaMenus() {
      clearTimeout(openTimeout);
      clearTimeout(closeTimeout);
      megaMenuItems.forEach(function(item) { item.classList.remove('is-open'); });
      if (megaMenuOverlay) megaMenuOverlay.classList.remove('is-visible');
      currentOpenMenu = null;
    }
    
    megaMenuItems.forEach(function(item) {
      var megaMenu = item.querySelector('.mega-menu');
      var dropdown = item.querySelector('.dropdown-menu');
      var submenu = megaMenu || dropdown;
      
      item.addEventListener('mouseenter', function() { openMegaMenu(item); });
      item.addEventListener('mouseleave', function(e) {
        var toElement = e.relatedTarget;
        if (submenu && submenu.contains(toElement)) return;
        closeMegaMenu(item);
      });
      if (submenu) {
        submenu.addEventListener('mouseenter', function() { clearTimeout(closeTimeout); });
        submenu.addEventListener('mouseleave', function(e) {
          var toElement = e.relatedTarget;
          if (item.contains(toElement)) return;
          closeMegaMenu(item);
        });
      }
    });
    
    if (megaMenuOverlay) megaMenuOverlay.addEventListener('click', closeAllMegaMenus);
    
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeAllMegaMenus();
        closeMobileMenu();
      }
    });

    // Mobile submenu toggles
    document.querySelectorAll('[data-mobile-submenu-toggle]').forEach(function(toggle) {
      toggle.addEventListener('click', function() {
        var submenuId = this.getAttribute('data-mobile-submenu-toggle');
        var submenu = document.querySelector('[data-mobile-submenu="' + submenuId + '"]');
        if (submenu) submenu.classList.add('is-active');
      });
    });

    document.querySelectorAll('[data-mobile-submenu-back]').forEach(function(back) {
      back.addEventListener('click', function() {
        var submenu = this.closest('.mobile-submenu');
        if (submenu) submenu.classList.remove('is-active');
      });
    });

    var searchToggles = document.querySelectorAll('[data-search-toggle]');
    searchToggles.forEach(function(toggle) {
      toggle.addEventListener('click', function(e) {
        e.preventDefault();
        closeMobileMenu();
        if (typeof window.openPredictiveSearch === 'function') {
          window.openPredictiveSearch();
        } else if (window.PredictiveSearch && typeof window.PredictiveSearch.open === 'function') {
          window.PredictiveSearch.open();
        }
      });
    });

    document.querySelectorAll('.nav-item--has-megamenu').forEach(function(item) {
      var link = item.querySelector('.nav-link');
      if (link) {
        link.addEventListener('keydown', function(e) {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            if (item.classList.contains('is-open')) {
              item.classList.remove('is-open');
              if (megaMenuOverlay) megaMenuOverlay.classList.remove('is-visible');
            } else {
              closeAllMegaMenus();
              item.classList.add('is-open');
              // Only show overlay for actual mega menus
              if (megaMenuOverlay && hasMegaMenu(item)) {
                megaMenuOverlay.classList.add('is-visible');
              }
            }
          }
        });
      }
    });
  });
})();
</script>

