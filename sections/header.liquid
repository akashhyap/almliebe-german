<header class="header{% if settings.header_sticky %} header--sticky{% endif %}" data-header>
  <div class="header__inner">
    
    {%- comment -%} Mobile Menu Toggle {%- endcomment -%}
    <button 
      type="button" 
      class="header__menu-toggle hidden-desktop" 
      data-mobile-menu-toggle
      aria-label="Open menu"
      aria-expanded="false"
    >
      {% render 'icon-menu' %}
    </button>

    {%- comment -%} Main Navigation - Left Side {%- endcomment -%}
    <nav class="header__nav header__nav--left hidden-mobile" role="navigation">
      <ul class="nav-list">
        {% for link in linklists[section.settings.main_menu].links %}
          <li class="nav-item{% if link.active %} nav-item--active{% endif %}{% if link.links.size > 0 %} nav-item--has-dropdown{% endif %}">
            <a href="{{ link.url }}" class="nav-link">
              {{ link.title }}
              {% if link.links.size > 0 %}
                <svg class="nav-link__icon" width="12" height="12" viewBox="0 0 12 12" fill="none">
                  <path d="M2 4L6 8L10 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                </svg>
              {% endif %}
            </a>
            
            {%- comment -%} Level 2: Dropdown menu {%- endcomment -%}
            {% if link.links.size > 0 %}
              <ul class="dropdown dropdown--level-2">
                {% for child_link in link.links %}
                  <li class="dropdown__item{% if child_link.links.size > 0 %} dropdown__item--has-children{% endif %}">
                    <a href="{{ child_link.url }}" class="dropdown__link">
                      {{ child_link.title }}
                      {% if child_link.links.size > 0 %}
                        <svg class="dropdown__icon" width="12" height="12" viewBox="0 0 12 12" fill="none">
                          <path d="M4 2L8 6L4 10" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                        </svg>
                      {% endif %}
                    </a>
                    
                    {%- comment -%} Level 3: Nested dropdown {%- endcomment -%}
                    {% if child_link.links.size > 0 %}
                      <ul class="dropdown dropdown--level-3">
                        {% for grandchild_link in child_link.links %}
                          <li class="dropdown__item">
                            <a href="{{ grandchild_link.url }}" class="dropdown__link">
                              {{ grandchild_link.title }}
                            </a>
                          </li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </nav>

    {%- comment -%} Logo - Centered {%- endcomment -%}
    <div class="header__logo">
      <a href="{{ routes.root_url }}" class="logo">
        {% if section.settings.logo != blank %}
          <img
            src="{{ section.settings.logo | image_url: width: 300 }}"
            srcset="{{ section.settings.logo | image_url: width: 300 }} 1x, {{ section.settings.logo | image_url: width: 600 }} 2x"
            alt="{{ shop.name }}"
            width="{{ section.settings.logo_width }}"
            height="auto"
            loading="eager"
            class="logo__image"
          >
        {% else %}
          <img
            src="{{ 'almliebe_logo.svg' | asset_url }}"
            alt="{{ shop.name }}"
            width="150"
            height="auto"
            loading="eager"
            class="logo__image"
          >
        {% endif %}
      </a>
    </div>

    {%- comment -%} Header Actions - Right Side {%- endcomment -%}
    <div class="header__actions">
      
      {%- comment -%} Search {%- endcomment -%}
      <a href="{{ routes.search_url }}" class="header__action" aria-label="Search">
        {% render 'icon-search' %}
      </a>

      {%- comment -%} Account {%- endcomment -%}
      <a href="{{ routes.account_url }}" class="header__action hidden-mobile" aria-label="Account">
        {% render 'icon-account' %}
      </a>

      {%- comment -%} Cart {%- endcomment -%}
      <a href="{{ routes.cart_url }}" class="header__action header__cart" aria-label="Cart">
        {% render 'icon-cart' %}
        <span class="header__cart-count" data-cart-count>{{ cart.item_count }}</span>
      </a>
    </div>

  </div>
</header>

{%- comment -%} Mobile Menu {%- endcomment -%}
<div class="mobile-menu" data-mobile-menu>
  <div class="mobile-menu__inner">
    <div class="mobile-menu__header">
      <h2 class="mobile-menu__title">Menu</h2>
      <button type="button" class="mobile-menu__close" data-mobile-menu-toggle aria-label="Close menu">
        {% render 'icon-close' %}
      </button>
    </div>

    <nav class="mobile-menu__nav" role="navigation">
      <ul class="mobile-nav-list">
        {% for link in linklists.main-menu.links %}
          <li class="mobile-nav-item">
            <a href="{{ link.url }}" class="mobile-nav-link">
              {{ link.title }}
            </a>
            {% if link.links.size > 0 %}
              <ul class="mobile-nav-submenu">
                {% for child_link in link.links %}
                  <li class="mobile-nav-subitem">
                    <a href="{{ child_link.url }}" class="mobile-nav-sublink">
                      {{ child_link.title }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
        
        {%- comment -%} Account link in mobile {%- endcomment -%}
        <li class="mobile-nav-item mobile-nav-item--account">
          <a href="{{ routes.account_url }}" class="mobile-nav-link">
            {% render 'icon-account' %}
            <span>Account</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>

{%- comment -%} Mobile Menu Overlay {%- endcomment -%}
<div class="mobile-menu__overlay" data-mobile-menu-overlay></div>

<style>
  /* Header - Gymshark Style */
  .header {
    width: 100%;
    background: #FFFFFF;
    border-bottom: 1px solid #E8E8E8;
    position: relative;
    z-index: var(--z-header);
  }

  .header--sticky {
    position: sticky;
    top: 0;
    transition: transform var(--duration-default) var(--ease-out), box-shadow var(--duration-default);
  }

  .header--sticky.is-scrolled {
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  }

  .header.is-hidden {
    transform: translateY(-100%);
  }

  .header__inner {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    height: 70px;
    gap: 2rem;
  }

  @media (max-width: 1023px) {
    .header__inner {
      display: flex;
      justify-content: space-between;
      padding: 0 1rem;
      height: 60px;
    }
  }

  /* Logo - Centered */
  .header__logo {
    grid-column: 2;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  @media (max-width: 1023px) {
    .header__logo {
      order: 2;
      flex: 1;
      justify-content: center;
    }
  }

  .logo {
    display: inline-flex;
    align-items: center;
  }

  .logo__image {
    display: block;
    height: 40px;
    width: auto;
  }

  @media (max-width: 1023px) {
    .logo__image {
      height: 32px;
    }
  }

  /* Navigation - Left Side */
  .header__nav {
    justify-self: start;
  }

  .header__nav--left {
    grid-column: 1;
  }

  .nav-list {
    display: flex;
    align-items: center;
    gap: 2.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: #000000;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 0.5rem 0;
    transition: opacity var(--duration-short);
  }

  .nav-link__icon {
    margin-left: 0.25rem;
    transition: transform var(--duration-short);
  }

  .nav-item--has-dropdown:hover .nav-link__icon {
    transform: rotate(180deg);
  }

  .nav-link:hover {
    opacity: 0.6;
  }

  .nav-item--active .nav-link {
    position: relative;
  }

  .nav-item--active .nav-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background: #000000;
  }

  /* Dropdown - Level 2 */
  .dropdown {
    position: absolute;
    min-width: 240px;
    background: #FFFFFF;
    border: 1px solid #E8E8E8;
    box-shadow: 0 4px 16px rgba(0,0,0,0.12);
    opacity: 0;
    visibility: hidden;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    list-style: none;
    margin: 0;
    padding: 0.75rem 0;
    z-index: 100;
  }

  .dropdown--level-2 {
    top: calc(100% + 5px);
    left: 0;
  }

  .nav-item:hover > .dropdown--level-2 {
    opacity: 1;
    visibility: visible;
  }

  /* Dropdown - Level 3 (Nested) */
  .dropdown--level-3 {
    top: -0.75rem;
    left: 100%;
    margin-left: -1px;
  }

  .dropdown__item--has-children:hover > .dropdown--level-3 {
    opacity: 1;
    visibility: visible;
  }

  .dropdown__item {
    margin: 0;
    position: relative;
  }

  .dropdown__item--has-children > .dropdown__link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-right: 1rem;
  }

  .dropdown__link {
    display: block;
    padding: 0.625rem 1.25rem;
    font-size: 0.8125rem;
    font-weight: 500;
    color: #000000;
    text-decoration: none;
    transition: background var(--duration-short);
    position: relative;
  }

  .dropdown__link:hover {
    background: #F5F5F5;
  }

  .dropdown__icon {
    flex-shrink: 0;
    margin-left: auto;
    opacity: 0.5;
  }

  /* Mega menu appearance for level 2 */
  .dropdown--level-2 {
    display: flex;
    flex-direction: column;
    max-height: 80vh;
    overflow-y: auto;
  }

  /* Custom scrollbar for dropdowns */
  .dropdown--level-2::-webkit-scrollbar {
    width: 6px;
  }

  .dropdown--level-2::-webkit-scrollbar-track {
    background: #F5F5F5;
  }

  .dropdown--level-2::-webkit-scrollbar-thumb {
    background: #CCCCCC;
    border-radius: 3px;
  }

  .dropdown--level-2::-webkit-scrollbar-thumb:hover {
    background: #999999;
  }

  /* Header Actions - Right Side */
  .header__actions {
    grid-column: 3;
    justify-self: end;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  @media (max-width: 1023px) {
    .header__actions {
      order: 3;
      gap: 0.25rem;
    }
  }

  .header__action {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000000;
    text-decoration: none;
    transition: opacity var(--duration-short);
  }

  .header__action:hover {
    opacity: 0.6;
  }

  .header__action svg {
    width: 24px;
    height: 24px;
    stroke-width: 1.5;
  }

  .header__cart {
    position: relative;
  }

  .header__cart-count {
    position: absolute;
    top: 8px;
    right: 8px;
    min-width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 0.25rem;
    font-size: 0.6875rem;
    font-weight: 700;
    background: #000000;
    color: #FFFFFF;
    border-radius: 9px;
  }

  .header__menu-toggle {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    color: #000000;
    cursor: pointer;
    padding: 0;
    order: 1;
  }

  .header__menu-toggle svg {
    width: 24px;
    height: 24px;
  }

  /* Mobile Menu */
  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    max-width: 400px;
    height: 100vh;
    background: #FFFFFF;
    z-index: calc(var(--z-header) + 10);
    transform: translateX(-100%);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow-y: auto;
  }

  .mobile-menu.is-active {
    transform: translateX(0);
  }

  .mobile-menu__inner {
    padding: 1.5rem;
  }

  .mobile-menu__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #E8E8E8;
  }

  .mobile-menu__title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .mobile-menu__close {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    cursor: pointer;
  }

  .mobile-nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .mobile-nav-item {
    border-bottom: 1px solid #E8E8E8;
  }

  .mobile-nav-link {
    display: block;
    padding: 1.25rem 0;
    font-size: 0.9375rem;
    font-weight: 600;
    color: #000000;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .mobile-nav-item--account .mobile-nav-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .mobile-nav-submenu {
    list-style: none;
    margin: 0;
    padding: 0 0 1rem 1.5rem;
  }

  .mobile-nav-sublink {
    display: block;
    padding: 0.75rem 0;
    font-size: 0.875rem;
    font-weight: 500;
    color: #666666;
    text-decoration: none;
  }

  .mobile-menu__overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: calc(var(--z-header) + 5);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .mobile-menu__overlay.is-active {
    opacity: 1;
    visibility: visible;
  }
</style>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image",
      "info": "Upload your logo (SVG, PNG, or JPG). Falls back to assets/almliebe_logo.svg if not set."
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 80,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Logo Width (Desktop)",
      "default": 150
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
