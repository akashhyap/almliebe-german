{% comment %}
  OCCASION BANNER SECTION
  Full-width banner with text overlay
  Features: Image or BG color, parallax effect, position control
{% endcomment %}

{%- liquid
  assign use_image = section.settings.use_image
  assign enable_parallax = section.settings.enable_parallax
-%}

<section class="occasion-banner occasion-banner--{{ section.settings.banner_height }}{% if enable_parallax and use_image %} occasion-banner--parallax{% endif %}"
         style="--text-color: {{ section.settings.text_color }}; {% unless use_image %}background-color: {{ section.settings.background_color }};{% endunless %}">
  
  {%- if use_image and section.settings.image != blank -%}
    <div class="occasion-banner__media">
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        srcset="{{ section.settings.image | image_url: width: 1200 }} 1200w,
                {{ section.settings.image | image_url: width: 1920 }} 1920w"
        sizes="100vw"
        alt="{{ section.settings.image.alt | escape }}"
        width="1920"
        height="auto"
        loading="lazy"
        class="occasion-banner__img"
        style="object-position: {{ section.settings.image_position }};"
      >
      <div class="occasion-banner__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
    </div>
  {%- endif -%}
  
  <div class="occasion-banner__wrapper occasion-banner__wrapper--h-{{ section.settings.content_horizontal }} occasion-banner__wrapper--v-{{ section.settings.content_vertical }}">
    <div class="occasion-banner__content occasion-banner__content--{{ section.settings.content_width }}">
      {%- if section.settings.subtitle != blank -%}
        <p class="occasion-banner__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
      
      {%- if section.settings.title != blank -%}
        <h2 class="occasion-banner__title">{{ section.settings.title }}</h2>
      {%- endif -%}
      
      {%- if section.settings.description != blank -%}
        <div class="occasion-banner__description">{{ section.settings.description }}</div>
      {%- endif -%}
      
      {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
        <a href="{{ section.settings.button_link }}" class="occasion-banner__btn occasion-banner__btn--{{ section.settings.button_style }}">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  .occasion-banner {
    position: relative;
    display: flex;
    overflow: hidden;
    width: 100%;
  }
  
  /* Height Options */
  .occasion-banner--small {
    min-height: 250px;
  }
  
  .occasion-banner--medium {
    min-height: 350px;
  }
  
  .occasion-banner--large {
    min-height: 450px;
  }
  
  .occasion-banner--xlarge {
    min-height: 550px;
  }
  
  .occasion-banner--full {
    min-height: 100vh;
  }
  
  @media (min-width: 768px) {
    .occasion-banner--small {
      min-height: 300px;
    }
    
    .occasion-banner--medium {
      min-height: 400px;
    }
    
    .occasion-banner--large {
      min-height: 500px;
    }
    
    .occasion-banner--xlarge {
      min-height: 650px;
    }
  }
  
  /* Media */
  .occasion-banner__media {
    position: absolute;
    inset: 0;
    z-index: 0;
    overflow: hidden;
  }
  
  .occasion-banner__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Parallax image needs to be larger to allow movement */
  .occasion-banner--parallax .occasion-banner__img {
    height: 120%;
    min-height: calc(100% + 60px);
    transform: translate3d(0, 0, 0) scale(1.1);
    will-change: transform;
  }
  
  .occasion-banner__overlay {
    position: absolute;
    inset: 0;
    background: #000000;
    z-index: 1;
  }
  
  /* Wrapper */
  .occasion-banner__wrapper {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
    padding: 3rem 1rem;
    display: flex;
  }
  
  @media (min-width: 768px) {
    .occasion-banner__wrapper {
      padding: 4rem 2rem;
    }
  }
  
  /* Horizontal Position */
  .occasion-banner__wrapper--h-left {
    justify-content: flex-start;
  }
  
  .occasion-banner__wrapper--h-center {
    justify-content: center;
  }
  
  .occasion-banner__wrapper--h-right {
    justify-content: flex-end;
  }
  
  /* Vertical Position */
  .occasion-banner__wrapper--v-top {
    align-items: flex-start;
  }
  
  .occasion-banner__wrapper--v-center {
    align-items: center;
  }
  
  .occasion-banner__wrapper--v-bottom {
    align-items: flex-end;
  }
  
  /* Content Width */
  .occasion-banner__content--narrow {
    max-width: 500px;
  }
  
  .occasion-banner__content--medium {
    max-width: 700px;
  }
  
  .occasion-banner__content--wide {
    max-width: 900px;
  }
  
  .occasion-banner__content--full {
    max-width: 100%;
  }
  
  /* Content Alignment */
  .occasion-banner__wrapper--h-center .occasion-banner__content {
    text-align: center;
  }
  
  .occasion-banner__wrapper--h-right .occasion-banner__content {
    text-align: right;
  }
  
  .occasion-banner__subtitle {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin: 0 0 0.75rem;
    color: var(--text-color);
    opacity: 0.9;
  }
  
  @media (min-width: 768px) {
    .occasion-banner__subtitle {
      font-size: 1rem;
    }
  }
  
  .occasion-banner__title {
    font-size: 1.75rem;
    font-weight: 700;
    line-height: 1.15;
    margin: 0 0 1rem;
    color: var(--text-color);
  }
  
  @media (min-width: 768px) {
    .occasion-banner__title {
      font-size: 2.5rem;
    }
  }
  
  @media (min-width: 1024px) {
    .occasion-banner__title {
      font-size: 3rem;
    }
  }
  
  .occasion-banner__description {
    font-size: 1rem;
    line-height: 1.6;
    margin: 0 0 1.5rem;
    color: var(--text-color);
    opacity: 0.9;
  }
  
  @media (min-width: 768px) {
    .occasion-banner__description {
      font-size: 1.125rem;
    }
  }
  
  /* Button Styles */
  .occasion-banner__btn {
    display: inline-block;
    padding: 1rem 2.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .occasion-banner__btn--solid {
    background: var(--text-color);
    color: #111827;
    border: 2px solid var(--text-color);
  }
  
  .occasion-banner__btn--solid:hover {
    background: transparent;
    color: var(--text-color);
  }
  
  .occasion-banner__btn--outline {
    background: transparent;
    color: var(--text-color);
    border: 2px solid var(--text-color);
  }
  
  .occasion-banner__btn--outline:hover {
    background: var(--text-color);
    color: #111827;
  }
  
  .occasion-banner__btn--dark {
    background: #111827;
    color: #ffffff;
    border: 2px solid #111827;
  }
  
  .occasion-banner__btn--dark:hover {
    background: #000000;
    border-color: #000000;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Parallax Effect
  const parallaxBanners = document.querySelectorAll('.occasion-banner--parallax');
  
  if (!parallaxBanners.length) return;
  
  function updateParallax() {
    parallaxBanners.forEach(banner => {
      const img = banner.querySelector('.occasion-banner__img');
      if (!img) return;
      
      const rect = banner.getBoundingClientRect();
      const windowHeight = window.innerHeight;
      
      // Check if element is in viewport
      if (rect.bottom > 0 && rect.top < windowHeight) {
        // Calculate how far through the viewport the element is (0 to 1)
        const scrollPercent = (windowHeight - rect.top) / (windowHeight + rect.height);
        
        // Calculate parallax offset (-30px to +30px range)
        const yOffset = (scrollPercent - 0.5) * 60;
        
        img.style.transform = `translate3d(0, ${yOffset}px, 0) scale(1.1)`;
      }
    });
  }
  
  // Throttle scroll events
  let ticking = false;
  
  function onScroll() {
    if (!ticking) {
      requestAnimationFrame(function() {
        updateParallax();
        ticking = false;
      });
      ticking = true;
    }
  }
  
  window.addEventListener('scroll', onScroll, { passive: true });
  window.addEventListener('resize', updateParallax);
  
  // Initial call
  updateParallax();
});
</script>

