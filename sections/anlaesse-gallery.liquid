{% comment %}
  ANLÄSSE GALLERY SECTION
  Masonry grid for occasion cards
{% endcomment %}

<section class="anlaesse-gallery">
  <div class="anlaesse-gallery__container">
    <div class="anlaesse-gallery__grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'occasion' -%}
          <a 
            href="{{ block.settings.link | default: '#' }}" 
            class="anlaesse-card anlaesse-card--{{ block.settings.size | default: 'medium' }}"
            {{ block.shopify_attributes }}
          >
            <div class="anlaesse-card__image">
              {%- if block.settings.image != blank -%}
                <img
                  src="{{ block.settings.image | image_url: width: 1200 }}"
                  srcset="{{ block.settings.image | image_url: width: 600 }} 600w,
                          {{ block.settings.image | image_url: width: 900 }} 900w,
                          {{ block.settings.image | image_url: width: 1200 }} 1200w"
                  alt="{{ block.settings.title | escape }}"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                >
              {%- else -%}
                <div class="anlaesse-card__placeholder"></div>
              {%- endif -%}
            </div>
            
            <div class="anlaesse-card__content">
              {%- if block.settings.title != blank -%}
                <span class="anlaesse-card__label">{{ block.settings.title }}</span>
              {%- endif -%}
              
              {%- if block.settings.description != blank -%}
                <p class="anlaesse-card__description">{{ block.settings.description }}</p>
              {%- endif -%}
            </div>
          </a>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .anlaesse-gallery {
    padding: 0 1rem;
  }
  
  .anlaesse-gallery__container {
    max-width: 1600px;
    margin: 0 auto;
  }
  
  @media (min-width: 768px) {
    .anlaesse-gallery {
      padding: 0 2rem;
    }
  }
  
  /* ========== GRID ========== */
  .anlaesse-gallery__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ section.settings.gap }}px;
  }
  
  @media (min-width: 640px) {
    .anlaesse-gallery__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .anlaesse-gallery__grid {
      grid-template-columns: repeat(3, 1fr);
      grid-auto-rows: {{ section.settings.row_height | times: 0.85 | round }}px;
    }
  }
  
  @media (min-width: 1280px) {
    .anlaesse-gallery__grid {
      grid-auto-rows: {{ section.settings.row_height }}px;
    }
  }
  
  @media (min-width: 1536px) {
    .anlaesse-gallery__grid {
      grid-auto-rows: {{ section.settings.row_height | times: 1.1 | round }}px;
    }
  }
  
  @media (min-width: 1800px) {
    .anlaesse-gallery__grid {
      grid-auto-rows: {{ section.settings.row_height | times: 1.25 | round }}px;
    }
  }
  
  /* ========== CARD ========== */
  .anlaesse-card {
    position: relative;
    display: block;
    overflow: hidden;
    text-decoration: none;
    background: #f3f4f6;
  }
  
  /* Card Sizes */
  @media (min-width: 1024px) {
    .anlaesse-card--small {
      grid-row: span 1;
      grid-column: span 1;
    }
    
    .anlaesse-card--medium {
      grid-row: span 1;
      grid-column: span 1;
    }
    
    .anlaesse-card--large {
      grid-row: span 2;
      grid-column: span 1;
    }
    
    .anlaesse-card--wide {
      grid-row: span 1;
      grid-column: span 2;
    }
    
    .anlaesse-card--featured {
      grid-row: span 2;
      grid-column: span 2;
    }
  }
  
  /* Mobile aspect ratios */
  @media (max-width: 1023px) {
    .anlaesse-card {
      aspect-ratio: 4/5;
    }
    
    .anlaesse-card--wide,
    .anlaesse-card--featured {
      aspect-ratio: 16/10;
    }
  }
  
  .anlaesse-card__image {
    position: absolute;
    inset: 0;
  }
  
  .anlaesse-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .anlaesse-card:hover .anlaesse-card__image img {
    transform: scale(1.05);
  }
  
  .anlaesse-card__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 100%);
  }
  
  /* ========== CARD CONTENT ========== */
  .anlaesse-card__content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    padding: 1.5rem;
    text-align: center;
    background: linear-gradient(to top, rgba(0,0,0,0.35) 0%, transparent 50%);
  }
  
  .anlaesse-card__label {
    display: inline-block;
    padding: 0.5rem 1rem;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #111827;
    background: #ffffff;
    margin-bottom: 0.5rem;
  }
  
  .anlaesse-card__description {
    font-size: 0.875rem;
    line-height: 1.5;
    margin: 0;
    padding: 0.5rem 1rem;
    background: rgba(255,255,255,0.95);
    color: #111827;
    max-width: 90%;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
  }
  
  .anlaesse-card:hover .anlaesse-card__description {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Always show on touch devices */
  @media (hover: none) {
    .anlaesse-card__description {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

{% schema %}
{
  "name": "Anlässe Gallery",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "row_height",
      "min": 280,
      "max": 500,
      "step": 20,
      "unit": "px",
      "label": "Base row height",
      "default": 380,
      "info": "Height scales automatically on larger screens"
    },
    {
      "type": "range",
      "id": "gap",
      "min": 4,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Gap between cards",
      "default": 12
    }
  ],
  "blocks": [
    {
      "type": "occasion",
      "name": "Occasion Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "OKTOBERFEST"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description (hover)",
          "default": "Finde Dein perfektes Wiesn-Outfit!"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "select",
          "id": "size",
          "label": "Card size",
          "options": [
            { "value": "small", "label": "Small" },
            { "value": "medium", "label": "Medium" },
            { "value": "large", "label": "Large (tall)" },
            { "value": "wide", "label": "Wide" },
            { "value": "featured", "label": "Featured (large)" }
          ],
          "default": "medium"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Anlässe Gallery"
    }
  ]
}
{% endschema %}
