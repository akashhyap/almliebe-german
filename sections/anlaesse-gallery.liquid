{% comment %}
  ANLÄSSE GALLERY SECTION
  Masonry grid for occasion cards
{% endcomment %}

<section class="anlaesse-gallery">
  <div class="anlaesse-gallery__container">
    <div class="anlaesse-gallery__grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'occasion' -%}
          <a 
            href="{{ block.settings.link | default: '#' }}" 
            class="anlaesse-card anlaesse-card--{{ block.settings.size | default: 'medium' }}"
            {{ block.shopify_attributes }}
          >
            <div class="anlaesse-card__image">
              {%- if block.settings.image != blank -%}
                <img
                  src="{{ block.settings.image | image_url: width: 1200 }}"
                  srcset="{{ block.settings.image | image_url: width: 600 }} 600w,
                          {{ block.settings.image | image_url: width: 900 }} 900w,
                          {{ block.settings.image | image_url: width: 1200 }} 1200w"
                  alt="{{ block.settings.title | escape }}"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                >
              {%- else -%}
                <div class="anlaesse-card__placeholder"></div>
              {%- endif -%}
            </div>
            
            <div class="anlaesse-card__content">
              {%- if block.settings.title != blank -%}
                <span class="anlaesse-card__label">{{ block.settings.title }}</span>
              {%- endif -%}
              
              {%- if block.settings.description != blank -%}
                <p class="anlaesse-card__description">{{ block.settings.description }}</p>
              {%- endif -%}
            </div>
          </a>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .anlaesse-gallery {
    padding: 0 1rem;
  }
  
  .anlaesse-gallery__container {
    max-width: 1600px;
    margin: 0 auto;
  }
  
  @media (min-width: 768px) {
    .anlaesse-gallery {
      padding: 0 2rem;
    }
  }
  
  /* ========== GRID ========== */
  .anlaesse-gallery__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ section.settings.gap }}px;
  }
  
  @media (min-width: 640px) {
    .anlaesse-gallery__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .anlaesse-gallery__grid {
      grid-template-columns: repeat(3, 1fr);
      grid-auto-rows: 340px;
    }
  }
  
  @media (min-width: 1280px) {
    .anlaesse-gallery__grid {
      grid-auto-rows: 400px;
    }
  }
  
  @media (min-width: 1440px) {
    .anlaesse-gallery__grid {
      grid-auto-rows: 450px;
    }
  }
  
  @media (min-width: 1680px) {
    .anlaesse-gallery__grid {
      grid-auto-rows: 500px;
    }
  }
  
  @media (min-width: 1920px) {
    .anlaesse-gallery__grid {
      grid-auto-rows: 550px;
    }
  }
  
  /* ========== CARD ========== */
  .anlaesse-card {
    position: relative;
    display: block;
    overflow: hidden;
    text-decoration: none;
    background: #f3f4f6;
  }
  
  /* Card Sizes */
  @media (min-width: 1024px) {
    .anlaesse-card--small {
      grid-row: span 1;
      grid-column: span 1;
    }
    
    .anlaesse-card--medium {
      grid-row: span 1;
      grid-column: span 1;
    }
    
    .anlaesse-card--large {
      grid-row: span 2;
      grid-column: span 1;
    }
    
    .anlaesse-card--wide {
      grid-row: span 1;
      grid-column: span 2;
    }
    
    .anlaesse-card--featured {
      grid-row: span 2;
      grid-column: span 2;
    }
  }
  
  /* Mobile aspect ratios */
  @media (max-width: 1023px) {
    .anlaesse-card {
      aspect-ratio: 4/5;
    }
    
    .anlaesse-card--wide,
    .anlaesse-card--featured {
      aspect-ratio: 16/10;
    }
  }
  
  .anlaesse-card__image {
    position: absolute;
    inset: 0;
  }
  
  .anlaesse-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .anlaesse-card:hover .anlaesse-card__image img {
    transform: scale(1.05);
  }
  
  .anlaesse-card__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 100%);
  }
  
  /* ========== CARD CONTENT ========== */
  .anlaesse-card__content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    padding: 2rem 1.5rem;
    text-align: center;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.7) 0%,
      rgba(0, 0, 0, 0.4) 30%,
      rgba(0, 0, 0, 0) 60%
    );
    transition: background 0.4s ease;
  }
  
  .anlaesse-card:hover .anlaesse-card__content {
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.5) 40%,
      rgba(0, 0, 0, 0.1) 70%
    );
  }
  
  .anlaesse-card__label {
    display: inline-block;
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: #ffffff;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
    margin-bottom: 0;
    padding: 0;
    background: none;
    position: relative;
    transition: transform 0.3s ease, margin 0.3s ease;
  }
  
  .anlaesse-card__label::after {
    content: '';
    display: block;
    width: 40px;
    height: 2px;
    background: #ffffff;
    margin: 0.75rem auto 0;
    opacity: 0.6;
    transition: width 0.3s ease, opacity 0.3s ease;
  }
  
  .anlaesse-card:hover .anlaesse-card__label {
    transform: translateY(-4px);
    margin-bottom: 0.25rem;
  }
  
  .anlaesse-card:hover .anlaesse-card__label::after {
    width: 60px;
    opacity: 1;
  }
  
  .anlaesse-card__description {
    font-size: 0.875rem;
    font-weight: 400;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.95);
    margin: 0;
    padding: 0;
    background: none;
    max-width: 85%;
    opacity: 0;
    transform: translateY(15px);
    transition: all 0.4s ease;
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
  }
  
  .anlaesse-card:hover .anlaesse-card__description {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Touch devices - always show description */
  @media (hover: none) {
    .anlaesse-card__label {
      margin-bottom: 0.5rem;
    }
    
    .anlaesse-card__label::after {
      width: 50px;
    }
    
    .anlaesse-card__description {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Larger cards get bigger typography */
  @media (min-width: 1024px) {
    .anlaesse-card--large .anlaesse-card__label,
    .anlaesse-card--featured .anlaesse-card__label {
      font-size: 0.9375rem;
      letter-spacing: 0.25em;
    }
    
    .anlaesse-card--large .anlaesse-card__description,
    .anlaesse-card--featured .anlaesse-card__description {
      font-size: 0.9375rem;
      max-width: 70%;
    }
    
    .anlaesse-card--wide .anlaesse-card__description,
    .anlaesse-card--featured .anlaesse-card__description {
      max-width: 50%;
    }
  }
</style>

{% schema %}
{
  "name": "Anlässe Gallery",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "gap",
      "min": 4,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Gap between cards",
      "default": 12
    }
  ],
  "blocks": [
    {
      "type": "occasion",
      "name": "Occasion Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "OKTOBERFEST"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description (hover)",
          "default": "Finde Dein perfektes Wiesn-Outfit!"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "select",
          "id": "size",
          "label": "Card size",
          "options": [
            { "value": "small", "label": "Small" },
            { "value": "medium", "label": "Medium" },
            { "value": "large", "label": "Large (tall)" },
            { "value": "wide", "label": "Wide" },
            { "value": "featured", "label": "Featured (large)" }
          ],
          "default": "medium"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Anlässe Gallery"
    }
  ]
}
{% endschema %}
