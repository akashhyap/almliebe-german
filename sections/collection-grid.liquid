{% comment %}
  COLLECTION GRID / CAROUSEL
  Display multiple collections as cards with carousel navigation
  
  Features:
  - Add multiple collections via blocks
  - Subtitle and title customizable
  - View All link option
  - Grid display (up to 5 visible)
  - Carousel when more than 5 collections
  - Navigation arrows
{% endcomment %}

{%- liquid
  assign subtitle = section.settings.subtitle
  assign custom_title = section.settings.title
  assign show_view_all = section.settings.show_view_all
  assign view_all_link = section.settings.view_all_link
  assign view_all_text = section.settings.view_all_text | default: 'Alle ansehen'
  assign collections_count = section.blocks.size
  assign enable_carousel = false
  if collections_count > 4
    assign enable_carousel = true
  endif
-%}

{%- if collections_count > 0 -%}
  <section class="collection-grid-section{% if enable_carousel %} has-carousel{% endif %}" data-collection-grid-section>
    <div class="collection-grid-section__container">
      
      {%- comment -%} Header {%- endcomment -%}
      <div class="collection-grid-section__header">
        <div class="collection-grid-section__titles">
          {%- if subtitle != blank -%}
            <p class="collection-grid-section__subtitle">{{ subtitle }}</p>
          {%- endif -%}
          {%- if custom_title != blank -%}
            <h2 class="collection-grid-section__title">{{ custom_title }}</h2>
          {%- endif -%}
          {%- if show_view_all and view_all_link != blank -%}
            <a href="{{ view_all_link }}" class="collection-grid-section__view-all">
              {{ view_all_text }}
            </a>
          {%- endif -%}
        </div>
        
        {%- comment -%} Desktop Navigation {%- endcomment -%}
        {%- if enable_carousel -%}
          <div class="collection-grid-section__nav collection-grid-section__nav--desktop">
            <button type="button" class="collection-grid-section__nav-btn" data-slider-prev aria-label="Previous" disabled>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="15 18 9 12 15 6"/>
              </svg>
            </button>
            <button type="button" class="collection-grid-section__nav-btn" data-slider-next aria-label="Next">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9 18 15 12 9 6"/>
              </svg>
            </button>
          </div>
        {%- endif -%}
      </div>
      
      {%- comment -%} Collection Grid / Slider {%- endcomment -%}
      <div class="collection-grid-section__slider" data-slider>
        {%- comment -%} Mobile Navigation - Inside slider for proper positioning {%- endcomment -%}
        <div class="collection-grid-section__nav collection-grid-section__nav--mobile">
          <button type="button" class="collection-grid-section__nav-btn" data-slider-prev-mobile aria-label="Previous" disabled>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="15 18 9 12 15 6"/>
            </svg>
          </button>
          <button type="button" class="collection-grid-section__nav-btn" data-slider-next-mobile aria-label="Next">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9 18 15 12 9 6"/>
            </svg>
          </button>
        </div>
        
        <div class="collection-grid-section__track{% unless enable_carousel %} collection-grid-section__track--desktop-grid{% endunless %}" data-slider-track>
          {%- for block in section.blocks -%}
            {%- assign block_collection = collections[block.settings.collection] -%}
            {%- assign custom_image = block.settings.image -%}
            {%- assign custom_card_title = block.settings.title -%}
            {%- assign custom_description = block.settings.description -%}
            {%- assign custom_link = block.settings.link -%}
            
            <div class="collection-grid-section__item" {{ block.shopify_attributes }}>
              <a href="{{ custom_link | default: block_collection.url }}" class="collection-card">
                <div class="collection-card__image">
                  {%- if custom_image != blank -%}
                    <img 
                      src="{{ custom_image | image_url: width: 600 }}"
                      alt="{{ custom_card_title | default: block_collection.title | escape }}"
                      width="300"
                      height="400"
                      loading="lazy"
                    >
                  {%- elsif block_collection.image != blank -%}
                    <img 
                      src="{{ block_collection.image | image_url: width: 600 }}"
                      alt="{{ block_collection.title | escape }}"
                      width="300"
                      height="400"
                      loading="lazy"
                    >
                  {%- elsif block_collection.products.first.featured_image != blank -%}
                    <img 
                      src="{{ block_collection.products.first.featured_image | image_url: width: 600 }}"
                      alt="{{ block_collection.title | escape }}"
                      width="300"
                      height="400"
                      loading="lazy"
                    >
                  {%- else -%}
                    <div class="collection-card__placeholder">
                      {{ 'collection-1' | placeholder_svg_tag }}
                    </div>
                  {%- endif -%}
                </div>
                <div class="collection-card__info">
                  <h3 class="collection-card__title">
                    {{ custom_card_title | default: block_collection.title }}
                  </h3>
                  {%- if custom_description != blank -%}
                    <p class="collection-card__description">{{ custom_description }}</p>
                  {%- endif -%}
                </div>
              </a>
            </div>
          {%- endfor -%}
        </div>
      </div>
      
    </div>
  </section>
{%- endif -%}

<style>
  .collection-grid-section {
    padding: 3rem 0;
  }
  
  @media (min-width: 768px) {
    .collection-grid-section {
      padding: 4rem 0;
    }
  }
  
  .collection-grid-section__container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  @media (min-width: 768px) {
    .collection-grid-section__container {
      padding: 0 2rem;
    }
  }
  
  /* Header */
  .collection-grid-section__header {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    margin-bottom: 1.5rem;
    gap: 1rem;
  }
  
  .collection-grid-section__titles {
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
    gap: 0.5rem 1.5rem;
  }
  
  .collection-grid-section__subtitle {
    width: 100%;
    font-size: 0.90rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #4b5563;
    margin: 0;
  }
  
  .collection-grid-section__title {
    font-size: 1.5rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: -0.5px;
    color: #111827;
    margin: 0;
  }
  
  @media (min-width: 768px) {
    .collection-grid-section__title {
      font-size: 1.65rem;
    }
  }
  
  .collection-grid-section__view-all {
    font-size: 0.9375rem;
    font-weight: 500;
    color: #111827;
    text-decoration: underline;
    text-underline-offset: 3px;
  }
  
  .collection-grid-section__view-all:hover {
    color: #000;
  }
  
  /* Desktop Navigation - in header */
  .collection-grid-section__nav--desktop {
    display: none;
    gap: 0.5rem;
  }
  
  @media (min-width: 768px) {
    .collection-grid-section__nav--desktop {
      display: flex;
    }
  }
  
  /* Mobile Navigation - inside slider */
  .collection-grid-section__nav--mobile {
    display: flex;
    justify-content: space-between;
    position: absolute;
    left: 0;
    right: 0;
    top: 50%;
    transform: translateY(-100%);
    pointer-events: none;
    z-index: 10;
    padding: 0 0.5rem;
  }
  
  @media (min-width: 640px) {
    .collection-grid-section__nav--mobile {
      padding: 0 1rem;
    }
  }
  
  @media (min-width: 768px) {
    .collection-grid-section__nav--mobile {
      display: none;
    }
  }
  
  .collection-grid-section__nav-btn {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.2s;
    pointer-events: auto;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.12);
    backdrop-filter: blur(4px);
  }
  
  @media (min-width: 640px) {
    .collection-grid-section__nav-btn {
      width: 40px;
      height: 40px;
    }
  }
  
  /* Desktop nav button style */
  .collection-grid-section__nav--desktop .collection-grid-section__nav-btn {
    width: 44px;
    height: 44px;
    background: #ffffff;
    border: 1px solid #e5e7eb;
    box-shadow: none;
    backdrop-filter: none;
  }
  
  .collection-grid-section__nav-btn:hover:not(:disabled) {
    background: #111827;
    border-color: #111827;
    color: #ffffff;
  }
  
  .collection-grid-section__nav-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }
  
  .collection-grid-section__nav-btn svg {
    stroke: currentColor;
    width: 16px;
    height: 16px;
  }
  
  @media (min-width: 640px) {
    .collection-grid-section__nav-btn svg {
      width: 20px;
      height: 20px;
    }
  }
  
  /* Slider Container */
  .collection-grid-section__slider {
    overflow: hidden;
    margin: 0 -1rem;
    padding: 0 1rem;
    position: relative;
  }
  
  @media (min-width: 768px) {
    .collection-grid-section__slider {
      margin: 0;
      padding: 0;
    }
  }
  
  /* Track - Mobile: Always carousel with center snap */
  .collection-grid-section__track {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    scroll-snap-type: x mandatory;
    padding: 0.5rem calc(50% - 130px);
  }
  
  @media (min-width: 480px) {
    .collection-grid-section__track {
      padding: 0.5rem calc(50% - 160px);
    }
  }
  
  @media (min-width: 640px) {
    .collection-grid-section__track {
      padding: 0.5rem 0;
    }
  }
  
  .collection-grid-section__track::-webkit-scrollbar {
    display: none;
  }
  
  /* Track - Desktop Grid Mode (4 or fewer items) */
  .collection-grid-section__track--desktop-grid {
    /* Mobile: still carousel */
  }
  
  @media (min-width: 768px) {
    .collection-grid-section__track--desktop-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      overflow-x: visible;
      scroll-snap-type: none;
      padding: 0;
    }
  }
  
  @media (min-width: 1024px) {
    .collection-grid-section__track--desktop-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  
  /* Grid Item */
  .collection-grid-section__item {
    flex: 0 0 260px;
    scroll-snap-align: center;
    min-width: 0;
    transition: transform 0.3s ease, opacity 0.3s ease;
    opacity: 0.5;
    transform: scale(0.9);
  }
  
  .collection-grid-section__item.is-centered {
    opacity: 1;
    transform: scale(1);
  }
  
  @media (max-width: 479px) {
    .collection-grid-section__item {
      flex: 0 0 220px;
    }
  }
  
  @media (min-width: 640px) {
    .collection-grid-section__item {
      flex: 0 0 calc(33.333% - 0.667rem);
      scroll-snap-align: start;
      opacity: 1;
      transform: scale(1);
    }
  }
  
  @media (min-width: 900px) {
    .collection-grid-section__item {
      flex: 0 0 calc(25% - 0.75rem);
    }
  }
  
  /* Grid mode - items fill evenly */
  @media (min-width: 768px) {
    .collection-grid-section__track--desktop-grid .collection-grid-section__item {
      flex: none;
    }
  }
  
  /* Collection Card */
  .collection-card {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .collection-card__image {
    position: relative;
    aspect-ratio: 3 / 4;
    overflow: hidden;
    background: #f3f4f6;
  }
  
  .collection-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }
  
  .collection-card:hover .collection-card__image img {
    transform: scale(1.05);
  }
  
  .collection-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f3f4f6;
  }
  
  .collection-card__placeholder svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }
  
  .collection-card__info {
    padding: 0.75rem 0 0;
    text-align: left;
  }
  
  .collection-card__title {
    font-size: 0.875rem;
    font-weight: 600;
    text-align: left;
    color: #111827;
    margin: 0;
    transition: text-decoration 0.2s;
  }
  
  @media (min-width: 768px) {
    .collection-card__title {
      font-size: 0.9375rem;
    }
  }
  
  .collection-card__description {
    font-size: 0.8125rem;
    font-weight: 400;
    color: #6b7280;
    margin: 0.25rem 0 0;
    line-height: 1.4;
  }
  
  .collection-card:hover .collection-card__title {
    text-decoration: underline;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const sections = document.querySelectorAll('[data-collection-grid-section]');
  
  sections.forEach(section => {
    const track = section.querySelector('[data-slider-track]');
    
    // Get all nav buttons (desktop and mobile)
    const prevBtns = section.querySelectorAll('[data-slider-prev], [data-slider-prev-mobile]');
    const nextBtns = section.querySelectorAll('[data-slider-next], [data-slider-next-mobile]');
    
    if (!track) return;
    
    const updateButtons = () => {
      const scrollLeft = track.scrollLeft;
      const maxScroll = track.scrollWidth - track.clientWidth;
      
      prevBtns.forEach(btn => btn.disabled = scrollLeft <= 10);
      nextBtns.forEach(btn => btn.disabled = scrollLeft >= maxScroll - 10);
    };
    
    const getSlideWidth = () => {
      const slide = track.querySelector('.collection-grid-section__item');
      if (!slide) return 300;
      const style = getComputedStyle(track);
      const gap = parseFloat(style.gap) || 16;
      return slide.offsetWidth + gap;
    };
    
    prevBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        track.scrollBy({ left: -getSlideWidth(), behavior: 'smooth' });
      });
    });
    
    nextBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        track.scrollBy({ left: getSlideWidth(), behavior: 'smooth' });
      });
    });
    
    track.addEventListener('scroll', updateButtons);
    window.addEventListener('resize', updateButtons);
    
    // Initial state
    setTimeout(updateButtons, 100);
    
    // Center card highlighting for mobile
    if (window.innerWidth < 640) {
      const cards = track.querySelectorAll('.collection-grid-section__item');
      const observerOptions = {
        root: track,
        rootMargin: '-40% 0px -40% 0px',
        threshold: 0
      };
      
      const centerObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-centered');
          } else {
            entry.target.classList.remove('is-centered');
          }
        });
      }, observerOptions);
      
      cards.forEach(card => centerObserver.observe(card));
      
      // Set initial centered state
      setTimeout(() => {
        const trackRect = track.getBoundingClientRect();
        const trackCenter = trackRect.left + trackRect.width / 2;
        cards.forEach(card => {
          const cardRect = card.getBoundingClientRect();
          const cardCenter = cardRect.left + cardRect.width / 2;
          if (Math.abs(cardCenter - trackCenter) < cardRect.width / 2) {
            card.classList.add('is-centered');
          }
        });
      }, 150);
    }
  });
});
</script>

{% schema %}
{
  "name": "Collection Grid",
  "tag": "section",
  "class": "section-collection-grid",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "info": "Small text above the title"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' link",
      "default": false
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "'View All' link URL"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "'View All' text",
      "default": "Alle ansehen"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom Image",
          "info": "Override the collection image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Custom Title",
          "info": "Override the collection title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "info": "Short description below title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Custom Link",
          "info": "Override the collection link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Grid",
      "blocks": []
    }
  ]
}
{% endschema %}
