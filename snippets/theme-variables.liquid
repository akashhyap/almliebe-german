{% comment %}
  THEME VARIABLES - Almliebe Black & White Theme
  
  Add this to your theme.liquid in the <head> section:
  {% render 'theme-variables' %}
{% endcomment %}

<style>
  :root {
    /* Primary Colors - Monochrome */
    --color-primary: #000000 !important;
    --color-secondary: #333333 !important;
    --color-accent: #000000 !important;
    
    /* Text Colors */
    --color-text: #1a1a1a !important;
    --color-text-secondary: #666666 !important;
    --color-text-light: #999999 !important;
    
    /* Background Colors - PURE WHITE */
    --color-background: #ffffff !important;
    --color-background-secondary: #ffffff !important;
    --color-surface: #ffffff !important;
    
    /* Border Colors */
    --color-border: #e5e5e5 !important;
    --color-border-dark: #cccccc !important;
    
    /* Functional Colors */
    --color-sale: #c53030 !important;
    --color-success: #2f855a !important;
    --color-warning: #c05621 !important;
    --color-error: #c53030 !important;
    
    /* UI Elements - Sharp corners */
    --border-radius: 0px !important;
    --border-radius-sm: 0px !important;
    --border-radius-lg: 0px !important;
    
    /* Shadows */
    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.07);
    --shadow-lg: 0 10px 25px rgba(0, 0, 0, 0.1);
    
    /* Z-index layers */
    --z-dropdown: 50;
    --z-sticky: 60;
    --z-drawer: 100;
    --z-modal: 200;
    --z-tooltip: 300;
    
    /* Typography */
    --font-body: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    --font-heading: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    
    /* Transitions */
    --transition-fast: 150ms ease;
    --transition-base: 250ms ease;
    --transition-slow: 350ms ease;
    --duration-short: 150ms;
    --duration-default: 250ms;
    --ease-out: cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Force white backgrounds */
  body,
  .page-wrapper,
  main,
  .main-content,
  .shopify-section,
  .product-page,
  .collection-page {
    background-color: #ffffff !important;
  }

  /* Force black primary buttons */
  .btn--primary,
  .shopify-payment-button button,
  button[name="add"],
  .product-form__submit,
  .add-to-cart,
  [data-add-to-cart] {
    background-color: #000000 !important;
    border-color: #000000 !important;
    color: #ffffff !important;
  }

  .btn--primary:hover,
  .shopify-payment-button button:hover,
  button[name="add"]:hover,
  .product-form__submit:hover,
  .add-to-cart:hover,
  [data-add-to-cart]:hover {
    background-color: #333333 !important;
    border-color: #333333 !important;
  }

  /* Links */
  a {
    color: #000000;
  }
  
  a:hover {
    color: #333333;
  }

  /* Form inputs with white background */
  input[type="text"],
  input[type="email"],
  input[type="tel"],
  input[type="password"],
  input[type="search"],
  input[type="number"],
  textarea,
  select {
    background-color: #ffffff !important;
    border-color: #e5e5e5 !important;
  }

  input:focus,
  textarea:focus,
  select:focus {
    border-color: #000000 !important;
  }

  /* Cards and sections */
  .card,
  .product-card,
  .collection-card {
    background-color: #ffffff !important;
  }
</style>
