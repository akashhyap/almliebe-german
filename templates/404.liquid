{% comment %}
  404 ERROR PAGE
  Custom styled 404 page for Almliebe
  German default - Weglot will handle English translation
{% endcomment %}

<section class="error-404">
  <div class="error-404__container">
    
    <div class="error-404__content">
      <span class="error-404__code">404</span>
      <h1 class="error-404__title">Seite nicht gefunden</h1>
      <p class="error-404__message">
        Die von Ihnen gesuchte Seite existiert leider nicht mehr oder wurde verschoben.
      </p>

      <div class="error-404__search">
        <form action="{{ routes.search_url }}" method="get" class="error-404__search-form">
          <input 
            type="search" 
            name="q" 
            placeholder="Suche nach Produkten..." 
            class="error-404__search-input"
            aria-label="Suche"
          >
          <button type="submit" class="error-404__search-btn" aria-label="Suchen">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.3-4.3"></path>
            </svg>
          </button>
        </form>
      </div>

      <div class="error-404__links">
        <p class="error-404__links-title">Beliebte Kategorien</p>
        <div class="error-404__links-grid">
          <a href="{{ routes.collections_url }}/dirndl" class="error-404__link">Dirndl</a>
          <a href="{{ routes.collections_url }}/lederhosen" class="error-404__link">Lederhosen</a>
          <a href="{{ routes.collections_url }}/damen" class="error-404__link">Damen</a>
          <a href="{{ routes.collections_url }}/herren" class="error-404__link">Herren</a>
          <a href="{{ routes.collections_url }}/kinder" class="error-404__link">Kinder</a>
          <a href="{{ routes.collections_url }}/accessoires" class="error-404__link">Accessoires</a>
        </div>
      </div>

      <a href="{{ routes.root_url }}" class="error-404__home-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
          <polyline points="9 22 9 12 15 12 15 22"></polyline>
        </svg>
        Zur√ºck zur Startseite
      </a>
    </div>

  </div>
</section>

<style>
  .error-404 {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem 1rem;
    background-color: #f9fafb;
  }

  .error-404__container {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  .error-404__content {
    text-align: center;
  }

  .error-404__code {
    display: block;
    font-size: 6rem;
    font-weight: 700;
    line-height: 1;
    color: #e5e7eb;
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) {
    .error-404__code {
      font-size: 8rem;
    }
  }

  .error-404__title {
    font-size: 1.75rem;
    font-weight: 600;
    color: #111827;
    margin: 0 0 1rem;
  }

  @media (min-width: 768px) {
    .error-404__title {
      font-size: 2.25rem;
    }
  }

  .error-404__message {
    font-size: 1rem;
    color: #6b7280;
    line-height: 1.6;
    margin: 0 0 2rem;
  }

  /* Search */
  .error-404__search {
    margin-bottom: 2.5rem;
  }

  .error-404__search-form {
    display: flex;
    max-width: 400px;
    margin: 0 auto;
    border: 1px solid #d1d5db;
    border-radius: 4px;
    overflow: hidden;
    background: #ffffff;
  }

  .error-404__search-input {
    flex: 1;
    padding: 0.875rem 1rem;
    font-size: 1rem;
    border: none;
    outline: none;
    background: transparent;
  }

  .error-404__search-input::placeholder {
    color: #9ca3af;
  }

  .error-404__search-btn {
    padding: 0.875rem 1rem;
    background: #111827;
    color: #ffffff;
    border: none;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .error-404__search-btn:hover {
    background: #374151;
  }

  /* Category Links */
  .error-404__links {
    margin-bottom: 2.5rem;
  }

  .error-404__links-title {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #6b7280;
    margin: 0 0 1rem;
  }

  .error-404__links-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
  }

  .error-404__link {
    display: inline-block;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #111827;
    background: #ffffff;
    border: 1px solid #d1d5db;
    border-radius: 4px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .error-404__link:hover {
    background: #111827;
    color: #ffffff;
    border-color: #111827;
  }

  /* Home Button */
  .error-404__home-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: #ffffff;
    background: #000000;
    text-decoration: none;
    transition: background-color 0.2s ease;
  }

  .error-404__home-btn:hover {
    background: #374151;
  }
</style>
